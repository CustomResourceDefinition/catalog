{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "task"
      ],
      "properties": {
        "connection": {
          "type": "object",
          "required": [
            "host",
            "insecureTLS"
          ],
          "properties": {
            "authSecretRef": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "namespace": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "x-kubernetes-map-type": "atomic"
            },
            "host": {
              "type": "string",
              "minLength": 1
            },
            "insecureTLS": {
              "type": "boolean"
            },
            "port": {
              "type": "integer",
              "default": 623
            },
            "providerOptions": {
              "type": "object",
              "properties": {
                "intelAMT": {
                  "type": "object",
                  "properties": {
                    "hostScheme": {
                      "type": "string",
                      "default": "http",
                      "enum": [
                        "http",
                        "https"
                      ]
                    },
                    "port": {
                      "type": "integer"
                    }
                  },
                  "additionalProperties": false
                },
                "ipmitool": {
                  "type": "object",
                  "properties": {
                    "cipherSuite": {
                      "type": "string"
                    },
                    "port": {
                      "type": "integer"
                    }
                  },
                  "additionalProperties": false
                },
                "preferredOrder": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "pattern": "(?i)^(ipmitool|asrockrack|gofish|IntelAMT|dell|supermicro|openbmc)$"
                  }
                },
                "redfish": {
                  "type": "object",
                  "properties": {
                    "port": {
                      "type": "integer"
                    },
                    "systemName": {
                      "type": "string"
                    },
                    "useBasicAuth": {
                      "type": "boolean"
                    }
                  },
                  "additionalProperties": false
                },
                "rpc": {
                  "type": "object",
                  "required": [
                    "consumerURL"
                  ],
                  "properties": {
                    "consumerURL": {
                      "type": "string"
                    },
                    "experimental": {
                      "type": "object",
                      "properties": {
                        "customRequestPayload": {
                          "type": "string"
                        },
                        "dotPath": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false
                    },
                    "hmac": {
                      "type": "object",
                      "properties": {
                        "prefixSigDisabled": {
                          "type": "boolean"
                        },
                        "secrets": {
                          "type": "object",
                          "additionalProperties": {
                            "type": "array",
                            "items": {
                              "description": "SecretReference represents a Secret Reference. It has enough information to retrieve secret\nin any namespace",
                              "type": "object",
                              "properties": {
                                "name": {
                                  "description": "name is unique within a namespace to reference a secret resource.",
                                  "type": "string"
                                },
                                "namespace": {
                                  "description": "namespace defines the space within which the secret name must be unique.",
                                  "type": "string"
                                }
                              },
                              "x-kubernetes-map-type": "atomic"
                            }
                          }
                        }
                      },
                      "additionalProperties": false
                    },
                    "logNotificationsDisabled": {
                      "type": "boolean"
                    },
                    "request": {
                      "type": "object",
                      "properties": {
                        "httpContentType": {
                          "type": "string"
                        },
                        "httpMethod": {
                          "type": "string"
                        },
                        "staticHeaders": {
                          "type": "object",
                          "additionalProperties": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          }
                        },
                        "timestampFormat": {
                          "type": "string"
                        },
                        "timestampHeader": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false
                    },
                    "signature": {
                      "type": "object",
                      "properties": {
                        "appendAlgoToHeaderDisabled": {
                          "type": "boolean"
                        },
                        "headerName": {
                          "type": "string"
                        },
                        "includedPayloadHeaders": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "task": {
          "type": "object",
          "maxProperties": 1,
          "properties": {
            "oneTimeBootDeviceAction": {
              "type": "object",
              "required": [
                "device"
              ],
              "properties": {
                "device": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "efiBoot": {
                  "type": "boolean"
                }
              },
              "additionalProperties": false
            },
            "powerAction": {
              "type": "string",
              "enum": [
                "on",
                "off",
                "soft",
                "status",
                "cycle",
                "reset"
              ]
            },
            "virtualMediaAction": {
              "type": "object",
              "required": [
                "kind"
              ],
              "properties": {
                "kind": {
                  "type": "string"
                },
                "mediaURL": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "completionTime": {
          "type": "string",
          "format": "date-time"
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "status",
              "type"
            ],
            "properties": {
              "message": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "startTime": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": false
    }
  }
}
