                  "all": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "x-kubernetes-preserve-unknown-fields": true
                    }
                  },
                  "any": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "x-kubernetes-preserve-unknown-fields": true
                    }
                  },
                  "method": {
                    "type": "string"
                  },
                  "not": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "x-kubernetes-preserve-unknown-fields": true
                    }
                  },
                  "pathRegex": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              },
              "isRetryable": {
                "type": "boolean"
              },
              "name": {
                "type": "string"
              },
              "responseClasses": {
                "type": "array",
                "items": {
                  "description": "ResponseClass describes how to classify a response (e.g. success or failures).",
                  "type": "object",
                  "required": [
                    "condition"
                  ],
                  "properties": {
                    "condition": {
                      "description": "ResponseMatch describes the conditions under which to classify a response.",
                      "type": "object",
                      "properties": {
                        "all": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "x-kubernetes-preserve-unknown-fields": true
                          }
                        },
                        "any": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "x-kubernetes-preserve-unknown-fields": true
                          }
                        },
                        "not": {
