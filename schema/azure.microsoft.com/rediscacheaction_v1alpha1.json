{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "actionName",
        "cacheName",
        "resourceGroup"
      ],
      "properties": {
        "actionName": {
          "type": "string",
          "enum": [
            "rollallkeys",
            "rollprimarykey",
            "rollsecondarykey",
            "rebootallnodes",
            "rebootprimarynode",
            "rebootsecondarynode"
          ]
        },
        "cacheName": {
          "type": "string"
        },
        "keyVaultToStoreSecrets": {
          "type": "string"
        },
        "resourceGroup": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[-\\w\\._\\(\\)]+$"
        },
        "secretName": {
          "type": "string"
        },
        "shardID": {
          "type": "integer",
          "format": "int32"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "completed": {
          "type": "string",
          "format": "date-time"
        },
        "containsUpdate": {
          "type": "boolean"
        },
        "failedProvisioning": {
          "type": "boolean"
        },
        "flattenedSecrets": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        },
        "output": {
          "type": "string"
        },
        "pollingUrl": {
          "type": "string"
        },
        "pollingUrlKind": {
          "type": "string",
          "enum": [
            "CreateOrUpdate",
            "Delete"
          ]
        },
        "provisioned": {
          "type": "boolean"
        },
        "provisioning": {
          "type": "boolean"
        },
        "requested": {
          "type": "string",
          "format": "date-time"
        },
        "resourceId": {
          "type": "string"
        },
        "specHash": {
          "type": "string"
        },
        "state": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
