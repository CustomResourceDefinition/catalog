{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "edition",
        "location",
        "resourceGroup",
        "server"
      ],
      "properties": {
        "dbName": {
          "type": "string"
        },
        "edition": {
          "type": "integer"
        },
        "elasticPoolId": {
          "type": "string"
        },
        "location": {
          "type": "string",
          "minLength": 1
        },
        "maxSize": {
          "pattern": "^(\\+|-)?(([0-9]+(\\.[0-9]*)?)|(\\.[0-9]+))(([KMGTPE]i)|[numkMGTPE]|([eE](\\+|-)?(([0-9]+(\\.[0-9]*)?)|(\\.[0-9]+))))?$",
          "anyOf": [
            {
              "type": "integer"
            },
            {
              "type": "string"
            }
          ],
          "x-kubernetes-int-or-string": true
        },
        "monthlyRetention": {
          "type": "string"
        },
        "resourceGroup": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[-\\w\\._\\(\\)]+$"
        },
        "server": {
          "type": "string",
          "minLength": 1
        },
        "shortTermRetentionPolicy": {
          "type": "object",
          "required": [
            "retentionDays"
          ],
          "properties": {
            "retentionDays": {
              "type": "integer",
              "format": "int32"
            }
          },
          "additionalProperties": false
        },
        "sku": {
          "type": "object",
          "required": [
            "name"
          ],
          "properties": {
            "capacity": {
              "type": "integer",
              "format": "int32"
            },
            "family": {
              "type": "string"
            },
            "name": {
              "type": "string",
              "minLength": 1
            },
            "size": {
              "type": "string"
            },
            "tier": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "subscriptionId": {
          "type": "string"
        },
        "weekOfYear": {
          "type": "integer",
          "format": "int32"
        },
        "weeklyRetention": {
          "type": "string"
        },
        "yearlyRetention": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "completed": {
          "type": "string",
          "format": "date-time"
        },
        "containsUpdate": {
          "type": "boolean"
        },
        "failedProvisioning": {
          "type": "boolean"
        },
        "flattenedSecrets": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        },
        "output": {
          "type": "string"
        },
        "pollingUrl": {
          "type": "string"
        },
        "pollingUrlKind": {
          "type": "string",
          "enum": [
            "CreateOrUpdate",
            "Delete"
          ]
        },
        "provisioned": {
          "type": "boolean"
        },
        "provisioning": {
          "type": "boolean"
        },
        "requested": {
          "type": "string",
          "format": "date-time"
        },
        "resourceId": {
          "type": "string"
        },
        "specHash": {
          "type": "string"
        },
        "state": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
