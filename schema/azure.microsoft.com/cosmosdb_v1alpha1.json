{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "location",
        "resourceGroup"
      ],
      "properties": {
        "ipRules": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "keyVaultToStoreSecrets": {
          "type": "string"
        },
        "kind": {
          "type": "string",
          "enum": [
            "GlobalDocumentDB",
            "MongoDB"
          ]
        },
        "location": {
          "type": "string",
          "minLength": 0
        },
        "locations": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "failoverPriority",
              "locationName"
            ],
            "properties": {
              "failoverPriority": {
                "type": "integer",
                "format": "int32"
              },
              "isZoneRedundant": {
                "type": "boolean"
              },
              "locationName": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "properties": {
          "type": "object",
          "properties": {
            "capabilities": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "enum": [
                      "EnableCassandra",
                      "EnableTable",
                      "EnableGremlin",
                      "EnableMongo"
                    ]
                  }
                },
                "additionalProperties": false
              }
            },
            "databaseAccountOfferType": {
              "type": "string",
              "enum": [
                "Standard"
              ]
            },
            "enableMultipleWriteLocations": {
              "type": "boolean"
            },
            "isVirtualNetworkFilterEnabled": {
              "type": "boolean"
            },
            "mongoDBVersion": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "resourceGroup": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[-\\w\\._\\(\\)]+$"
        },
        "virtualNetworkRules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "ignoreMissingVNetServiceEndpoint": {
                "type": "boolean"
              },
              "subnetID": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "completed": {
          "type": "string",
          "format": "date-time"
        },
        "containsUpdate": {
          "type": "boolean"
        },
        "failedProvisioning": {
          "type": "boolean"
        },
        "flattenedSecrets": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        },
        "output": {
          "type": "string"
        },
        "pollingUrl": {
          "type": "string"
        },
        "pollingUrlKind": {
          "type": "string",
          "enum": [
            "CreateOrUpdate",
            "Delete"
          ]
        },
        "provisioned": {
          "type": "boolean"
        },
        "provisioning": {
          "type": "boolean"
        },
        "requested": {
          "type": "string",
          "format": "date-time"
        },
        "resourceId": {
          "type": "string"
        },
        "specHash": {
          "type": "string"
        },
        "state": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
