{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "location",
        "resourceGroup"
      ],
      "properties": {
        "adminSecret": {
          "type": "string",
          "minLength": 1
        },
        "createMode": {
          "type": "string"
        },
        "keyVaultToStoreSecrets": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "replicaProperties": {
          "type": "object",
          "properties": {
            "sourceServerId": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "resourceGroup": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[-\\w\\._\\(\\)]+$"
        },
        "serverVersion": {
          "type": "string"
        },
        "sku": {
          "type": "object",
          "properties": {
            "capacity": {
              "type": "integer",
              "format": "int32"
            },
            "family": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "size": {
              "type": "string"
            },
            "tier": {
              "type": "string",
              "enum": [
                "Basic",
                "GeneralPurpose",
                "MemoryOptimized"
              ]
            }
          },
          "additionalProperties": false
        },
        "sslEnforcement": {
          "type": "string",
          "enum": [
            "Enabled",
            "Disabled"
          ]
        },
        "storageProfile": {
          "type": "object",
          "properties": {
            "backupRetentionDays": {
              "type": "integer",
              "format": "int32"
            },
            "geoRedundantBackup": {
              "type": "string"
            },
            "storageAutogrow": {
              "type": "string",
              "enum": [
                "Enabled",
                "Disabled"
              ]
            },
            "storageMB": {
              "type": "integer",
              "format": "int32"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "completed": {
          "type": "string",
          "format": "date-time"
        },
        "containsUpdate": {
          "type": "boolean"
        },
        "failedProvisioning": {
          "type": "boolean"
        },
        "flattenedSecrets": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        },
        "output": {
          "type": "string"
        },
        "pollingUrl": {
          "type": "string"
        },
        "pollingUrlKind": {
          "type": "string",
          "enum": [
            "CreateOrUpdate",
            "Delete"
          ]
        },
        "provisioned": {
          "type": "boolean"
        },
        "provisioning": {
          "type": "boolean"
        },
        "requested": {
          "type": "string",
          "format": "date-time"
        },
        "resourceId": {
          "type": "string"
        },
        "specHash": {
          "type": "string"
        },
        "state": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
