{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "location",
        "resourceGroup"
      ],
      "properties": {
        "authorizationRule": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "rights": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "keyVaultToStoreSecrets": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        },
        "properties": {
          "type": "object",
          "properties": {
            "captureDescription": {
              "type": "object",
              "required": [
                "enabled"
              ],
              "properties": {
                "destination": {
                  "type": "object",
                  "properties": {
                    "archiveNameFormat": {
                      "type": "string"
                    },
                    "blobContainer": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string",
                      "enum": [
                        "EventHubArchive.AzureBlockBlob",
                        "EventHubArchive.AzureDataLake"
                      ]
                    },
                    "storageAccount": {
                      "type": "object",
                      "properties": {
                        "accountName": {
                          "type": "string",
                          "maxLength": 24,
                          "minLength": 3,
                          "pattern": "^[a-z0-9]+$"
                        },
                        "resourceGroup": {
                          "type": "string",
                          "minLength": 1,
                          "pattern": "^[-\\w\\._\\(\\)]+$"
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "additionalProperties": false
                },
                "enabled": {
                  "type": "boolean"
                },
                "intervalInSeconds": {
                  "type": "integer",
                  "format": "int32",
                  "maximum": 900,
                  "minimum": 60
                },
                "sizeLimitInBytes": {
                  "type": "integer",
                  "format": "int32",
                  "maximum": 524288000,
                  "minimum": 10485760
                }
              },
              "additionalProperties": false
            },
            "messageRetentionInDays": {
              "type": "integer",
              "format": "int32",
              "maximum": 7,
              "minimum": 1
            },
            "partitionCount": {
              "type": "integer",
              "format": "int32",
              "maximum": 32,
              "minimum": 2
            }
          },
          "additionalProperties": false
        },
        "resourceGroup": {
          "type": "string",
          "minLength": 1,
          "pattern": "^[-\\w\\._\\(\\)]+$"
        },
        "secretName": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "completed": {
          "type": "string",
          "format": "date-time"
        },
        "containsUpdate": {
          "type": "boolean"
        },
        "failedProvisioning": {
          "type": "boolean"
        },
        "flattenedSecrets": {
          "type": "boolean"
        },
        "message": {
          "type": "string"
        },
        "output": {
          "type": "string"
        },
        "pollingUrl": {
          "type": "string"
        },
        "pollingUrlKind": {
          "type": "string",
          "enum": [
            "CreateOrUpdate",
            "Delete"
          ]
        },
        "provisioned": {
          "type": "boolean"
        },
        "provisioning": {
          "type": "boolean"
        },
        "requested": {
          "type": "string",
          "format": "date-time"
        },
        "resourceId": {
          "type": "string"
        },
        "specHash": {
          "type": "string"
        },
        "state": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
