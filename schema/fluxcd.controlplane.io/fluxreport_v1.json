{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "distribution"
      ],
      "properties": {
        "cluster": {
          "type": "object",
          "required": [
            "platform",
            "serverVersion"
          ],
          "properties": {
            "nodes": {
              "type": "integer"
            },
            "platform": {
              "type": "string"
            },
            "serverVersion": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "components": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "image",
              "name",
              "ready",
              "status"
            ],
            "properties": {
              "image": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "ready": {
                "type": "boolean"
              },
              "status": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "distribution": {
          "type": "object",
          "required": [
            "entitlement",
            "status"
          ],
          "properties": {
            "entitlement": {
              "type": "string"
            },
            "managedBy": {
              "type": "string"
            },
            "status": {
              "type": "string"
            },
            "version": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "operator": {
          "type": "object",
          "required": [
            "apiVersion",
            "platform",
            "version"
          ],
          "properties": {
            "apiVersion": {
              "type": "string"
            },
            "platform": {
              "type": "string"
            },
            "version": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "reconcilers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "apiVersion",
              "kind"
            ],
            "properties": {
              "apiVersion": {
                "type": "string"
              },
              "kind": {
                "type": "string"
              },
              "stats": {
                "type": "object",
                "required": [
                  "failing",
                  "running",
                  "suspended"
                ],
                "properties": {
                  "failing": {
                    "type": "integer"
                  },
                  "running": {
                    "type": "integer"
                  },
                  "suspended": {
                    "type": "integer"
                  },
                  "totalSize": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          }
        },
        "sync": {
          "type": "object",
          "required": [
            "id",
            "ready",
            "status"
          ],
          "properties": {
            "id": {
              "type": "string"
            },
            "path": {
              "type": "string"
            },
            "ready": {
              "type": "boolean"
            },
            "source": {
              "type": "string"
            },
            "status": {
              "type": "string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "message",
              "reason",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 32768
              },
              "observedGeneration": {
                "type": "integer",
                "format": "int64",
                "minimum": 0
              },
              "reason": {
                "type": "string",
                "maxLength": 1024,
                "minLength": 1,
                "pattern": "^[A-Za-z]([A-Za-z0-9_,:]*[A-Za-z0-9_])?$"
              },
              "status": {
                "type": "string",
                "enum": [
                  "True",
                  "False",
                  "Unknown"
                ]
              },
              "type": {
                "type": "string",
                "maxLength": 316,
                "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*/)?(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])$"
              }
            },
            "additionalProperties": false
          }
        },
        "lastHandledReconcileAt": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "x-kubernetes-validations": [
    {
      "rule": "self.metadata.name == 'flux'",
      "message": "the only accepted name for a FluxReport is 'flux'"
    }
  ]
}
