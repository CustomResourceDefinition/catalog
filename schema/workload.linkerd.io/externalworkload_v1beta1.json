{
  "type": "object",
  "required": [
    "spec"
  ],
  "properties": {
    "apiVerson": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "meshTLS"
      ],
      "properties": {
        "meshTLS": {
          "type": "object",
          "required": [
            "identity",
            "serverName"
          ],
          "properties": {
            "identity": {
              "type": "string",
              "maxLength": 253,
              "minLength": 1
            },
            "serverName": {
              "type": "string",
              "maxLength": 253,
              "minLength": 1
            }
          },
          "additionalProperties": false
        },
        "ports": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "port"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "port": {
                "type": "integer",
                "format": "int32",
                "maximum": 65535,
                "minimum": 1
              },
              "protocol": {
                "type": "string",
                "default": "TCP"
              }
            },
            "additionalProperties": false
          }
        },
        "workloadIPs": {
          "type": "array",
          "maxItems": 2,
          "items": {
            "type": "object",
            "properties": {
              "ip": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "conditions": {
          "type": "array",
          "required": [
            "status",
            "type"
          ],
          "items": {
            "type": "object",
            "properties": {
              "lastProbeTime": {
                "type": "string",
                "format": "date-time"
              },
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 32768
              },
              "reason": {
                "type": "string",
                "maxLength": 1024,
                "minLength": 1,
                "pattern": "^[A-Za-z]([A-Za-z0-9_,:]*[A-Za-z0-9_])?$"
              },
              "status": {
                "type": "string",
                "enum": [
                  "True",
                  "False",
                  "Unknown"
                ]
              },
              "type": {
                "type": "string",
                "maxLength": 316,
                "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*/)?(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])$"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  }
}
