            },
            "scopes": {
              "type": "string"
            },
            "secretName": {
              "type": "string"
            },
            "syncedAttributes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "userIdClaim": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "syncedAt": {
          "type": "string",
