{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "interval",
        "sourceRef"
      ],
      "properties": {
        "git": {
          "type": "object",
          "required": [
            "commit"
          ],
          "properties": {
            "checkout": {
              "type": "object",
              "required": [
                "ref"
              ],
              "properties": {
                "ref": {
                  "type": "object",
                  "properties": {
                    "branch": {
                      "type": "string"
                    },
                    "commit": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    },
                    "semver": {
                      "type": "string"
                    },
                    "tag": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "commit": {
              "type": "object",
              "required": [
                "author"
              ],
              "properties": {
                "author": {
                  "type": "object",
                  "required": [
                    "email"
                  ],
                  "properties": {
                    "email": {
                      "type": "string"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                },
                "messageTemplate": {
                  "type": "string"
                },
                "messageTemplateValues": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "signingKey": {
                  "type": "object",
                  "required": [
                    "secretRef"
                  ],
                  "properties": {
                    "secretRef": {
                      "type": "object",
                      "required": [
                        "name"
                      ],
                      "properties": {
                        "name": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "push": {
              "type": "object",
              "properties": {
                "branch": {
                  "type": "string"
                },
                "options": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "refspec": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "interval": {
          "type": "string",
          "pattern": "^([0-9]+(\\.[0-9]+)?(ms|s|m|h))+$"
        },
        "policySelector": {
          "type": "object",
          "properties": {
            "matchExpressions": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "key",
                  "operator"
                ],
                "properties": {
                  "key": {
                    "type": "string"
                  },
                  "operator": {
                    "type": "string"
                  },
                  "values": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "x-kubernetes-list-type": "atomic"
                  }
                },
                "additionalProperties": false
              },
              "x-kubernetes-list-type": "atomic"
            },
            "matchLabels": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false,
          "x-kubernetes-map-type": "atomic"
        },
        "sourceRef": {
          "type": "object",
          "required": [
            "kind",
            "name"
          ],
          "properties": {
            "apiVersion": {
              "type": "string"
            },
            "kind": {
              "type": "string",
              "default": "GitRepository",
              "enum": [
                "GitRepository"
              ]
            },
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "suspend": {
          "type": "boolean"
        },
        "update": {
          "type": "object",
          "default": {
            "strategy": "Setters"
          },
          "properties": {
            "path": {
              "type": "string"
            },
            "strategy": {
              "type": "string",
              "default": "Setters",
              "enum": [
                "Setters"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "default": {
        "observedGeneration": -1
      },
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "message",
              "reason",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 32768
              },
              "observedGeneration": {
                "type": "integer",
                "format": "int64",
                "minimum": 0
              },
              "reason": {
                "type": "string",
                "maxLength": 1024,
                "minLength": 1,
                "pattern": "^[A-Za-z]([A-Za-z0-9_,:]*[A-Za-z0-9_])?$"
              },
              "status": {
                "type": "string",
                "enum": [
                  "True",
                  "False",
                  "Unknown"
                ]
              },
              "type": {
                "type": "string",
                "maxLength": 316,
                "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*/)?(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])$"
              }
            },
            "additionalProperties": false
          }
        },
        "lastAutomationRunTime": {
          "type": "string",
          "format": "date-time"
        },
        "lastHandledReconcileAt": {
          "type": "string"
        },
        "lastPushCommit": {
          "type": "string"
        },
        "lastPushTime": {
          "type": "string",
          "format": "date-time"
        },
        "observedGeneration": {
          "type": "integer",
          "format": "int64"
        },
        "observedPolicies": {
          "type": "object",
          "additionalProperties": {
            "description": "ImageRef represents an image reference.",
            "type": "object",
            "required": [
              "name",
              "tag"
            ],
            "properties": {
              "digest": {
                "description": "Digest is the image's digest.",
                "type": "string"
              },
              "name": {
                "description": "Name is the bare image's name.",
                "type": "string"
              },
              "tag": {
                "description": "Tag is the image's tag.",
                "type": "string"
              }
            }
          }
        },
        "observedSourceRevision": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
