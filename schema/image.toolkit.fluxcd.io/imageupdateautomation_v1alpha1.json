{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "checkout",
        "commit",
        "interval"
      ],
      "properties": {
        "checkout": {
          "type": "object",
          "required": [
            "branch",
            "gitRepositoryRef"
          ],
          "properties": {
            "branch": {
              "type": "string"
            },
            "gitRepositoryRef": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "commit": {
          "type": "object",
          "required": [
            "authorEmail",
            "authorName"
          ],
          "properties": {
            "authorEmail": {
              "type": "string"
            },
            "authorName": {
              "type": "string"
            },
            "messageTemplate": {
              "type": "string"
            },
            "signingKey": {
              "type": "object",
              "properties": {
                "secretRef": {
                  "type": "object",
                  "required": [
                    "name"
                  ],
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "interval": {
          "type": "string"
        },
        "push": {
          "type": "object",
          "required": [
            "branch"
          ],
          "properties": {
            "branch": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "suspend": {
          "type": "boolean"
        },
        "update": {
          "type": "object",
          "default": {
            "strategy": "Setters"
          },
          "required": [
            "strategy"
          ],
          "properties": {
            "path": {
              "type": "string"
            },
            "strategy": {
              "type": "string",
              "default": "Setters",
              "enum": [
                "Setters"
              ]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "message",
              "reason",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 32768
              },
              "observedGeneration": {
                "type": "integer",
                "format": "int64",
                "minimum": 0
              },
              "reason": {
                "type": "string",
                "maxLength": 1024,
                "minLength": 1,
                "pattern": "^[A-Za-z]([A-Za-z0-9_,:]*[A-Za-z0-9_])?$"
              },
              "status": {
                "type": "string",
                "enum": [
                  "True",
                  "False",
                  "Unknown"
                ]
              },
              "type": {
                "type": "string",
                "maxLength": 316,
                "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*/)?(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])$"
              }
            },
            "additionalProperties": false
          }
        },
        "lastAutomationRunTime": {
          "type": "string",
          "format": "date-time"
        },
        "lastHandledReconcileAt": {
          "type": "string"
        },
        "lastPushCommit": {
          "type": "string"
        },
        "lastPushTime": {
          "type": "string",
          "format": "date-time"
        },
        "observedGeneration": {
          "type": "integer",
          "format": "int64"
        }
      },
      "additionalProperties": false
    }
  }
}
