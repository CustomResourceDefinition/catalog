{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "image",
        "interval"
      ],
      "properties": {
        "accessFrom": {
          "type": "object",
          "required": [
            "namespaceSelectors"
          ],
          "properties": {
            "namespaceSelectors": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "matchLabels": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string"
                    }
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "certSecretRef": {
          "type": "object",
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "exclusionList": {
          "type": "array",
          "default": [
            "^.*\\.sig$"
          ],
          "maxItems": 25,
          "items": {
            "type": "string"
          }
        },
        "image": {
          "type": "string"
        },
        "insecure": {
          "type": "boolean"
        },
        "interval": {
          "type": "string",
          "pattern": "^([0-9]+(\\.[0-9]+)?(ms|s|m|h))+$"
        },
        "provider": {
          "type": "string",
          "default": "generic",
          "enum": [
            "generic",
            "aws",
            "azure",
            "gcp"
          ]
        },
        "proxySecretRef": {
          "type": "object",
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "secretRef": {
          "type": "object",
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "serviceAccountName": {
          "type": "string",
          "maxLength": 253
        },
        "suspend": {
          "type": "boolean"
        },
        "timeout": {
          "type": "string",
          "pattern": "^([0-9]+(\\.[0-9]+)?(ms|s|m))+$"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "default": {
        "observedGeneration": -1
      },
      "properties": {
        "canonicalImageName": {
          "type": "string"
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "message",
              "reason",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 32768
              },
              "observedGeneration": {
                "type": "integer",
                "format": "int64",
                "minimum": 0
              },
              "reason": {
                "type": "string",
                "maxLength": 1024,
                "minLength": 1,
                "pattern": "^[A-Za-z]([A-Za-z0-9_,:]*[A-Za-z0-9_])?$"
              },
              "status": {
                "type": "string",
                "enum": [
                  "True",
                  "False",
                  "Unknown"
                ]
              },
              "type": {
                "type": "string",
                "maxLength": 316,
                "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*/)?(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])$"
              }
            },
            "additionalProperties": false
          }
        },
        "lastHandledReconcileAt": {
          "type": "string"
        },
        "lastScanResult": {
          "type": "object",
          "required": [
            "tagCount"
          ],
          "properties": {
            "latestTags": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "revision": {
              "type": "string"
            },
            "scanTime": {
              "type": "string",
              "format": "date-time"
            },
            "tagCount": {
              "type": "integer"
            }
          },
          "additionalProperties": false
        },
        "observedExclusionList": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "observedGeneration": {
          "type": "integer",
          "format": "int64"
        }
      },
      "additionalProperties": false
    }
  }
}
