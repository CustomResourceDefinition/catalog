                "preinstalled_operating_system_version": {
                  "type": "object",
                  "properties": {
                    "distro": {
                      "type": "string"
                    },
                    "image_tag": {
                      "type": "string"
                    },
                    "os_slug": {
                      "type": "string"
                    },
                    "slug": {
                      "type": "string"
                    },
                    "version": {
                      "type": "string"
                    }
