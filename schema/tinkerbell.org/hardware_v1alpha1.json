                    "type": "object",
                    "properties": {
                      "address": {
                        "type": "string"
                      },
                      "family": {
                        "type": "integer",
                        "format": "int64"
                      },
                      "gateway": {
                        "type": "string"
                      },
                      "management": {
                        "type": "boolean"
                      },
                      "netmask": {
                        "type": "string"
