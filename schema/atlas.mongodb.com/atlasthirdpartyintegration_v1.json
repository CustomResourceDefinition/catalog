          "enum": [
            "DATADOG",
            "MICROSOFT_TEAMS",
            "NEW_RELIC",
            "OPS_GENIE",
            "PAGER_DUTY",
            "PROMETHEUS",
            "SLACK",
            "VICTOR_OPS",
            "WEBHOOK"
          ],
