{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "properties": {
        "authentication": {
          "type": "object",
          "properties": {
            "namespace": {
              "type": "string"
            },
            "path": {
              "type": "string",
              "default": "kubernetes",
              "pattern": "^(?:/?[\\w;:@\u0026=\\$-\\.\\+]*)+/?"
            },
            "role": {
              "type": "string"
            },
            "serviceAccount": {
              "type": "object",
              "default": {
                "name": "default"
              },
              "properties": {
                "name": {
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "x-kubernetes-map-type": "atomic"
            }
          },
          "additionalProperties": false
        },
        "connection": {
          "type": "object",
          "properties": {
            "address": {
              "type": "string"
            },
            "maxRetries": {
              "type": "integer"
            },
            "tLSConfig": {
              "type": "object",
              "properties": {
                "cacert": {
                  "type": "string"
                },
                "skipVerify": {
                  "type": "boolean"
                },
                "tlsSecret": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false,
                  "x-kubernetes-map-type": "atomic"
                },
                "tlsServerName": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "timeOut": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "credentialType": {
          "type": "string",
          "enum": [
            "password",
            "rsa_private_key"
          ]
        },
        "dBName": {
          "type": "string"
        },
        "name": {
          "type": "string",
          "pattern": "[a-z0-9]([-a-z0-9]*[a-z0-9])?"
        },
        "passwordCredentialConfig": {
          "type": "object",
          "properties": {
            "passwordPolicy": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "path": {
          "type": "string",
          "pattern": "^(?:/?[\\w;:@\u0026=\\$-\\.\\+]*)+/?"
        },
        "rotationPeriod": {
          "type": "integer",
          "minimum": 5
        },
        "rotationStatements": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "x-kubernetes-list-type": "set"
        },
        "rsaPrivateKeyCredentialConfig": {
          "type": "object",
          "properties": {
            "format": {
              "type": "string",
              "enum": [
                "pkcs8"
              ]
            },
            "keyBits": {
              "type": "integer",
              "enum": [
                2048,
                3072,
                4096
              ]
            }
          },
          "additionalProperties": false
        },
        "username": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "message",
              "reason",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 32768
              },
              "observedGeneration": {
                "type": "integer",
                "format": "int64",
                "minimum": 0
              },
              "reason": {
                "type": "string",
                "maxLength": 1024,
                "minLength": 1,
                "pattern": "^[A-Za-z]([A-Za-z0-9_,:]*[A-Za-z0-9_])?$"
              },
              "status": {
                "type": "string",
                "enum": [
                  "True",
                  "False",
                  "Unknown"
                ]
              },
              "type": {
                "type": "string",
                "maxLength": 316,
                "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*/)?(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])$"
              }
            },
            "additionalProperties": false
          },
          "x-kubernetes-list-map-keys": [
            "type"
          ],
          "x-kubernetes-list-type": "map"
        }
      },
      "additionalProperties": false
    }
  }
}
