{
  "type": "object",
  "required": [
    "spec"
  ],
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "spec": {
      "type": "object",
      "required": [
        "source"
      ],
      "properties": {
        "source": {
          "type": "object",
          "oneOf": [
            {
              "required": [
                "persistentVolumeClaimName"
              ]
            },
            {
              "required": [
                "volumeSnapshotContentName"
              ]
            }
          ],
          "properties": {
            "persistentVolumeClaimName": {
              "type": "string"
            },
            "volumeSnapshotContentName": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "volumeSnapshotClassName": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "boundVolumeSnapshotContentName": {
          "type": "string"
        },
        "creationTime": {
          "type": "string",
          "format": "date-time"
        },
        "error": {
          "type": "object",
          "properties": {
            "message": {
              "type": "string"
            },
            "time": {
              "type": "string",
              "format": "date-time"
            }
          },
          "additionalProperties": false
        },
        "readyToUse": {
          "type": "boolean"
        },
        "restoreSize": {
          "type": "string",
          "pattern": "^(\\+|-)?(([0-9]+(\\.[0-9]*)?)|(\\.[0-9]+))(([KMGTPE]i)|[numkMGTPE]|([eE](\\+|-)?(([0-9]+(\\.[0-9]*)?)|(\\.[0-9]+))))?$",
          "x-kubernetes-int-or-string": true
        },
        "volumeGroupSnapshotName": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
