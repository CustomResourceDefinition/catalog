{
  "type": "object",
  "required": [
    "spec"
  ],
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "module",
        "organization",
        "token",
        "workspace"
      ],
      "properties": {
        "deletionPolicy": {
          "type": "string",
          "default": "retain",
          "enum": [
            "retain",
            "destroy"
          ]
        },
        "destroyOnDeletion": {
          "type": "boolean",
          "default": false
        },
        "module": {
          "type": "object",
          "required": [
            "source"
          ],
          "properties": {
            "source": {
              "type": "string",
              "minLength": 1
            },
            "version": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        },
        "name": {
          "type": "string",
          "default": "this",
          "minLength": 1
        },
        "organization": {
          "type": "string",
          "minLength": 1
        },
        "outputs": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              },
              "sensitive": {
                "type": "boolean",
                "default": false
              }
            },
            "additionalProperties": false
          }
        },
        "restartedAt": {
          "type": "string",
          "minLength": 1
        },
        "token": {
          "type": "object",
          "required": [
            "secretKeyRef"
          ],
          "properties": {
            "secretKeyRef": {
              "type": "object",
              "required": [
                "key"
              ],
              "properties": {
                "key": {
                  "type": "string"
                },
                "name": {
                  "type": "string",
                  "default": ""
                },
                "optional": {
                  "type": "boolean"
                }
              },
              "additionalProperties": false,
              "x-kubernetes-map-type": "atomic"
            }
          },
          "additionalProperties": false
        },
        "variables": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": [
              "name"
            ],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        },
        "workspace": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string",
              "pattern": "^ws-[a-zA-Z0-9]+$"
            },
            "name": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "required": [
        "observedGeneration",
        "workspaceID"
      ],
      "properties": {
        "configurationVersion": {
          "type": "object",
          "required": [
            "id",
            "status"
          ],
          "properties": {
            "id": {
              "type": "string"
            },
            "status": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "destroyRunID": {
          "type": "string"
        },
        "observedGeneration": {
          "type": "integer",
          "format": "int64"
        },
        "output": {
          "type": "object",
          "required": [
            "runID"
          ],
          "properties": {
            "runID": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "run": {
          "type": "object",
          "properties": {
            "configurationVersion": {
              "type": "string"
            },
            "id": {
              "type": "string"
            },
            "outputRunID": {
              "type": "string"
            },
            "status": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "workspaceID": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
