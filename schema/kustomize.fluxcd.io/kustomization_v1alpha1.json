              },
              "name": {
                "type": "string"
              },
              "namespace": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "interval": {
          "type": "string"
        },
        "path": {
          "type": "string",
          "pattern": "^\\./"
        },
        "prune": {
          "type": "boolean"
        },
        "serviceAccount": {
          "type": "object",
          "required": [
            "name",
            "namespace"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "sourceRef": {
          "type": "object",
