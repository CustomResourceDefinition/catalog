{
  "description": "BackingImage is where Longhorn stores backing image object.",
  "type": "object",
  "properties": {
    "apiVersion": {
      "description": "APIVersion defines the versioned schema of this representation of an object.\nServers should convert recognized schemas to the latest internal value, and\nmay reject unrecognized values.\nMore info: https://git.k8s.io/community/contributors/devel/sig-architecture/api-conventions.md#resources",
      "type": "string"
    },
    "kind": {
      "description": "Kind is a string value representing the REST resource this object represents.\nServers may infer this from the endpoint the client submits requests to.\nCannot be updated.\nIn CamelCase.\nMore info: https://git.k8s.io/community/contributors/devel/sig-architecture/api-conventions.md#types-kinds",
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "description": "BackingImageSpec defines the desired state of the Longhorn backing image",
      "type": "object",
      "properties": {
        "checksum": {
          "type": "string"
        },
        "dataEngine": {
          "type": "string",
          "default": "v1",
          "enum": [
            "v1",
            "v2"
          ]
        },
        "diskFileSpecMap": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "dataEngine": {
                "type": "string",
                "enum": [
                  "v1",
                  "v2"
                ]
              },
              "evictionRequested": {
                "type": "boolean"
              }
            }
          }
        },
        "diskSelector": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "disks": {
          "description": "Deprecated. We are now using DiskFileSpecMap to assign different spec to the file on different disks.",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "minNumberOfCopies": {
          "type": "integer"
        },
        "nodeSelector": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "secret": {
          "type": "string"
        },
        "secretNamespace": {
          "type": "string"
        },
        "sourceParameters": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "sourceType": {
          "type": "string",
          "enum": [
            "download",
            "upload",
            "export-from-volume",
            "restore",
            "clone"
          ]
        }
      },
      "additionalProperties": false
    },
    "status": {
      "description": "BackingImageStatus defines the observed state of the Longhorn backing image status",
      "type": "object",
      "properties": {
        "checksum": {
          "type": "string"
        },
        "diskFileStatusMap": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "dataEngine": {
                "type": "string",
                "enum": [
                  "v1",
                  "v2"
                ]
              },
              "lastStateTransitionTime": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "progress": {
                "type": "integer"
              },
              "state": {
                "type": "string"
              }
            }
          },
          "nullable": true
        },
        "diskLastRefAtMap": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "nullable": true
        },
        "ownerID": {
          "type": "string"
        },
        "realSize": {
          "description": "Real size of image in bytes, which may be smaller than the size when the file is a sparse file. Will be zero until known (e.g. while a backing image is uploading)",
          "type": "integer",
          "format": "int64"
        },
        "size": {
          "type": "integer",
          "format": "int64"
        },
        "uuid": {
          "type": "string"
        },
        "v2FirstCopyDisk": {
          "type": "string"
        },
        "v2FirstCopyStatus": {
          "description": "It is pending -\u003e in-progress -\u003e ready/failed",
          "type": "string"
        },
        "virtualSize": {
          "description": "Virtual size of image in bytes, which may be larger than physical size. Will be zero until known (e.g. while a backing image is uploading)",
          "type": "integer",
          "format": "int64"
        }
      },
      "additionalProperties": false
    }
  }
}
