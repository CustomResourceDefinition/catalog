{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "properties": {
        "parameters": {
          "type": "object",
          "default": {},
          "properties": {
            "maintenance": {
              "type": "object",
              "default": {},
              "properties": {
                "dayOfWeek": {
                  "type": "string",
                  "default": "tuesday",
                  "enum": [
                    "monday",
                    "tuesday",
                    "wednesday",
                    "thursday",
                    "friday",
                    "saturday",
                    "sunday",
                    "never"
                  ]
                },
                "timeOfDay": {
                  "type": "string",
                  "default": "22:30:00",
                  "pattern": "^([0-1]?[0-9]|2[0-3]):([0-5][0-9]):([0-5][0-9])$"
                }
              },
              "additionalProperties": false
            },
            "network": {
              "type": "object",
              "default": {},
              "properties": {
                "ipFilter": {
                  "type": "array",
                  "default": [
                    "0.0.0.0/0"
                  ],
                  "items": {
                    "type": "string"
                  }
                }
              },
              "additionalProperties": false
            },
            "service": {
              "type": "object",
              "default": {},
              "properties": {
                "kafkaSettings": {
                  "type": "object",
                  "x-kubernetes-preserve-unknown-fields": true
                },
                "version": {
                  "type": "string",
                  "default": "3.8",
                  "enum": [
                    "3.8"
                  ]
                },
                "zone": {
                  "type": "string",
                  "default": "ch-gva-2",
                  "enum": [
                    "ch-gva-2",
                    "ch-dk-2",
                    "de-fra-1",
                    "de-muc-1",
                    "at-vie-1",
                    "bg-sof-1"
                  ]
                }
              },
              "additionalProperties": false
            },
            "size": {
              "type": "object",
              "default": {},
              "properties": {
                "plan": {
                  "type": "string",
                  "default": "startup-2"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "writeConnectionSecretToRef": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "additionalProperties": false,
          "x-kubernetes-map-type": "atomic"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "kafkaConditions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 32768
              },
              "observedGeneration": {
                "type": "integer",
                "format": "int64",
                "minimum": 0
              },
              "reason": {
                "type": "string",
                "maxLength": 1024,
                "pattern": "^[A-Za-z]([A-Za-z0-9_,:]*[A-Za-z0-9_])?$"
              },
              "status": {
                "type": "string",
                "enum": [
                  "True",
                  "False",
                  "Unknown"
                ]
              },
              "type": {
                "type": "string",
                "maxLength": 316,
                "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*/)?(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])$"
              }
            },
            "additionalProperties": false
          }
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
