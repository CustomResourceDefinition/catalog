{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "package"
      ],
      "properties": {
        "commonLabels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "ignoreCrossplaneConstraints": {
          "type": "boolean",
          "default": false
        },
        "package": {
          "type": "string",
          "x-kubernetes-validations": [
            {
              "rule": "self.matches('^[^\\\\.\\\\/]+(\\\\.[^\\\\.\\\\/]+)+(\\\\/[^\\\\/:@]+)+(:[^:@]+(@sha256.+)?|@sha256.+)$')",
              "message": "must be a fully qualified image name, including the registry, repository, and tag or digest. For example, 'registry.example.com/repo/package:tag' or 'registry.example.com/repo/package[:tag]@sha256:1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef'."
            }
          ]
        },
        "packagePullPolicy": {
          "type": "string",
          "default": "IfNotPresent"
        },
        "packagePullSecrets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string",
                "default": ""
              }
            },
            "additionalProperties": false,
            "x-kubernetes-map-type": "atomic"
          }
        },
        "revisionActivationPolicy": {
          "type": "string",
          "default": "Automatic"
        },
        "revisionHistoryLimit": {
          "type": "integer",
          "format": "int64",
          "default": 1
        },
        "skipDependencyResolution": {
          "type": "boolean",
          "default": false
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "appliedImageConfigRefs": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "reason"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "reason",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string"
              },
              "observedGeneration": {
                "type": "integer",
                "format": "int64"
              },
              "reason": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          },
          "x-kubernetes-list-map-keys": [
            "type"
          ],
          "x-kubernetes-list-type": "map"
        },
        "currentIdentifier": {
          "type": "string"
        },
        "currentRevision": {
          "type": "string"
        },
        "resolvedPackage": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
