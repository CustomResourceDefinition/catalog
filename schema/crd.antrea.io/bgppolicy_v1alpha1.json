{
  "type": "object",
  "required": [
    "spec"
  ],
  "properties": {
    "spec": {
      "type": "object",
      "required": [
        "nodeSelector",
        "localASN"
      ],
      "properties": {
        "advertisements": {
          "type": "object",
          "properties": {
            "egress": {
              "type": "object"
            },
            "pod": {
              "type": "object"
            },
            "service": {
              "type": "object",
              "properties": {
                "ipTypes": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": [
                      "ClusterIP",
                      "LoadBalancerIP",
                      "ExternalIP"
                    ]
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "bgpPeers": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "address",
              "asn"
            ],
            "properties": {
              "address": {
                "type": "string",
                "oneOf": [
                  {
                    "format": "ipv4"
                  },
                  {
                    "format": "ipv6"
                  }
                ]
              },
              "asn": {
                "type": "integer",
                "format": "int32",
                "maximum": 65535,
                "minimum": 1
              },
              "gracefulRestartTimeSeconds": {
                "type": "integer",
                "format": "int32",
                "default": 120,
                "maximum": 3600,
                "minimum": 1
              },
              "multihopTTL": {
                "type": "integer",
                "format": "int32",
                "default": 1,
                "maximum": 255,
                "minimum": 1
              },
              "port": {
                "type": "integer",
                "format": "int32",
                "default": 179,
                "maximum": 65535,
                "minimum": 1
              }
            },
            "additionalProperties": false
          }
        },
        "confederation": {
          "type": "object",
          "properties": {
            "identifier": {
              "type": "integer",
              "format": "int32",
              "maximum": 65535,
              "minimum": 1
            },
            "memberASNs": {
              "type": "array",
              "items": {
                "type": "integer",
                "format": "int32",
                "maximum": 65535,
                "minimum": 1
              }
            }
          },
          "additionalProperties": false
        },
        "listenPort": {
          "type": "integer",
          "format": "int32",
          "default": 179,
          "maximum": 65535,
          "minimum": 1
        },
        "localASN": {
          "type": "integer",
          "format": "int32",
          "maximum": 65535,
          "minimum": 1
        },
        "nodeSelector": {
          "type": "object",
          "properties": {
            "matchExpressions": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "key": {
                    "type": "string"
                  },
                  "operator": {
                    "type": "string",
                    "enum": [
                      "In",
                      "NotIn",
                      "Exists",
                      "DoesNotExist"
                    ]
                  },
                  "values": {
                    "type": "array",
                    "items": {
                      "type": "string",
                      "pattern": "^(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])?$"
                    }
                  }
                },
                "additionalProperties": false
              }
            },
            "matchLabels": {
              "x-kubernetes-preserve-unknown-fields": true
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
