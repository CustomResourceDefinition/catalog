{
  "type": "object",
  "required": [
    "spec"
  ],
  "properties": {
    "spec": {
      "type": "object",
      "required": [
        "source",
        "captureConfig",
        "destination"
      ],
      "anyOf": [
        {
          "properties": {
            "source": {
              "required": [
                "pod"
              ]
            }
          },
          "additionalProperties": false
        },
        {
          "properties": {
            "destination": {
              "required": [
                "pod"
              ]
            }
          },
          "additionalProperties": false
        }
      ],
      "properties": {
        "captureConfig": {
          "type": "object",
          "oneOf": [
            {
              "required": [
                "firstN"
              ]
            }
          ],
          "properties": {
            "firstN": {
              "type": "object",
              "required": [
                "number"
              ],
              "properties": {
                "number": {
                  "type": "integer",
                  "format": "int32"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "destination": {
          "type": "object",
          "oneOf": [
            {
              "required": [
                "pod"
              ]
            },
            {
              "required": [
                "ip"
              ]
            }
          ],
          "properties": {
            "ip": {
              "type": "string",
              "format": "ipv4"
            },
            "pod": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "namespace": {
                  "type": "string",
                  "default": "default"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "direction": {
          "type": "string",
          "default": "SourceToDestination",
          "enum": [
            "SourceToDestination",
            "DestinationToSource",
            "Both"
          ]
        },
        "fileServer": {
          "type": "object",
          "properties": {
            "hostPublicKey": {
              "type": "string",
              "format": "byte"
            },
            "url": {
              "type": "string",
              "pattern": "sftp:\\/\\/[\\w-_./]+:\\d+"
            }
          },
          "additionalProperties": false
        },
        "packet": {
          "type": "object",
          "properties": {
            "ipFamily": {
              "type": "string",
              "default": "IPv4",
              "enum": [
                "IPv4"
              ]
            },
            "protocol": {
              "x-kubernetes-int-or-string": true
            },
            "transportHeader": {
              "type": "object",
              "properties": {
                "icmp": {
                  "type": "object",
                  "properties": {
                    "messages": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": [
                          "type"
                        ],
                        "properties": {
                          "code": {
                            "type": "integer",
                            "maximum": 255,
                            "minimum": 0
                          },
                          "type": {
                            "x-kubernetes-int-or-string": true
                          }
                        },
                        "additionalProperties": false
                      }
                    }
                  },
                  "additionalProperties": false
                },
                "tcp": {
                  "type": "object",
                  "properties": {
                    "dstPort": {
                      "type": "integer",
                      "maximum": 65535,
                      "minimum": 1
                    },
                    "flags": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": [
                          "value"
                        ],
                        "properties": {
                          "mask": {
                            "type": "integer",
                            "maximum": 255,
                            "minimum": 0
                          },
                          "value": {
                            "type": "integer",
                            "maximum": 255,
                            "minimum": 0
                          }
                        },
                        "additionalProperties": false
                      }
                    },
                    "srcPort": {
                      "type": "integer",
                      "maximum": 65535,
                      "minimum": 1
                    }
                  },
                  "additionalProperties": false
                },
                "udp": {
                  "type": "object",
                  "properties": {
                    "dstPort": {
                      "type": "integer",
                      "maximum": 65535,
                      "minimum": 1
                    },
                    "srcPort": {
                      "type": "integer",
                      "maximum": 65535,
                      "minimum": 1
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false,
              "x-kubernetes-validations": [
                {
                  "rule": "(has(self.icmp) ? 1 : 0) + (has(self.udp) ? 1 : 0) + (has(self.tcp) ? 1: 0) \u003c= 1",
                  "message": "At most one of 'icmp', 'udp', or 'tcp' may be set"
                }
              ]
            }
          },
          "additionalProperties": false
        },
        "source": {
          "type": "object",
          "oneOf": [
            {
              "required": [
                "pod"
              ]
            },
            {
              "required": [
                "ip"
              ]
            }
          ],
          "properties": {
            "ip": {
              "type": "string",
              "format": "ipv4"
            },
            "pod": {
              "type": "object",
              "required": [
                "name"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "namespace": {
                  "type": "string",
                  "default": "default"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "timeout": {
          "type": "integer",
          "default": 60,
          "maximum": 300,
          "minimum": 1
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "lastTransitionTime": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "filePath": {
          "type": "string"
        },
        "numberCaptured": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    }
  }
}
