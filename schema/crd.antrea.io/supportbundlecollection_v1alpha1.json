{
  "type": "object",
  "properties": {
    "spec": {
      "type": "object",
      "required": [
        "fileServer",
        "authentication"
      ],
      "anyOf": [
        {
          "required": [
            "nodes"
          ]
        },
        {
          "required": [
            "externalNodes"
          ]
        }
      ],
      "properties": {
        "authentication": {
          "type": "object",
          "properties": {
            "authSecret": {
              "type": "object",
              "properties": {
                "name": {
                  "type": "string"
                },
                "namespace": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "authType": {
              "type": "string",
              "enum": [
                "BearerToken",
                "APIKey",
                "BasicAuthentication"
              ]
            }
          },
          "additionalProperties": false
        },
        "expirationMinutes": {
          "type": "integer",
          "default": 60
        },
        "externalNodes": {
          "type": "object",
          "required": [
            "namespace"
          ],
          "properties": {
            "namespace": {
              "type": "string"
            },
            "nodeNames": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "nodeSelector": {
              "type": "object",
              "properties": {
                "matchExpressions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "key": {
                        "type": "string"
                      },
                      "operator": {
                        "type": "string",
                        "enum": [
                          "In",
                          "NotIn",
                          "Exists",
                          "DoesNotExist"
                        ]
                      },
                      "values": {
                        "type": "array",
                        "items": {
                          "type": "string",
                          "pattern": "^(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])?$"
                        }
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "matchLabels": {
                  "x-kubernetes-preserve-unknown-fields": true
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "fileServer": {
          "type": "object",
          "properties": {
            "hostPublicKey": {
              "type": "string",
              "format": "byte"
            },
            "url": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "nodes": {
          "type": "object",
          "properties": {
            "nodeNames": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "nodeSelector": {
              "type": "object",
              "properties": {
                "matchExpressions": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "key": {
                        "type": "string"
                      },
                      "operator": {
                        "type": "string",
                        "enum": [
                          "In",
                          "NotIn",
                          "Exists",
                          "DoesNotExist"
                        ]
                      },
                      "values": {
                        "type": "array",
                        "items": {
                          "type": "string",
                          "pattern": "^(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])?$"
                        }
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "matchLabels": {
                  "x-kubernetes-preserve-unknown-fields": true
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "sinceTime": {
          "type": "string",
          "format": "duration"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "collectedNodes": {
          "type": "integer"
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "lastTransitionTime": {
                "type": "string"
              },
              "message": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "desiredNodes": {
          "type": "integer"
        }
      },
      "additionalProperties": false
    }
  }
}
