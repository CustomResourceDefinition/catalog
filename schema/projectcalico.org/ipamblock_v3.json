{
  "type": "object",
  "required": [
    "metadata",
    "spec"
  ],
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "allocations",
        "attributes",
        "cidr",
        "strictAffinity",
        "unallocated"
      ],
      "properties": {
        "affinity": {
          "type": "string",
          "pattern": "^(host|virtual):[a-zA-Z0-9\\.\\-_]+$"
        },
        "affinityClaimTime": {
          "type": "string",
          "format": "date-time"
        },
        "allocations": {
          "type": "array",
          "items": {
            "type": "integer",
            "nullable": true
          }
        },
        "attributes": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "handle_id": {
                "type": "string"
              },
              "secondary": {
                "type": "object",
                "additionalProperties": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": false
          }
        },
        "cidr": {
          "type": "string",
          "format": "cidr"
        },
        "deleted": {
          "type": "boolean"
        },
        "sequenceNumber": {
          "type": "integer",
          "format": "int64",
          "default": 0
        },
        "sequenceNumberForAllocation": {
          "type": "object",
          "additionalProperties": {
            "type": "integer",
            "format": "int64"
          }
        },
        "strictAffinity": {
          "type": "boolean"
        },
        "unallocated": {
          "type": "array",
          "items": {
            "type": "integer"
          }
        }
      },
      "additionalProperties": false
    }
  }
}
