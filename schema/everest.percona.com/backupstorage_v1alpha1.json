{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "bucket",
        "credentialsSecretName",
        "type"
      ],
      "properties": {
        "allowedNamespaces": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "bucket": {
          "type": "string"
        },
        "credentialsSecretName": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "endpointURL": {
          "type": "string"
        },
        "forcePathStyle": {
          "type": "boolean",
          "default": false
        },
        "region": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "s3",
            "azure"
          ]
        },
        "verifyTLS": {
          "type": "boolean",
          "default": true
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "default": {
        "inUse": false
      },
      "properties": {
        "inUse": {
          "type": "boolean",
          "default": false
        },
        "lastObservedGeneration": {
          "type": "integer",
          "format": "int64"
        },
        "usedNamespaces": {
          "type": "object",
          "additionalProperties": {
            "type": "boolean"
          }
        }
      },
      "additionalProperties": false
    }
  }
}
