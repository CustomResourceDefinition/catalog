{
  "type": "object",
  "required": [
    "spec"
  ],
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "capacity",
        "ownerNodeID",
        "poolName",
        "volumeType"
      ],
      "properties": {
        "capacity": {
          "type": "string",
          "minLength": 1
        },
        "compression": {
          "type": "string",
          "pattern": "^(on|off|lzjb|zstd(?:-fast|-[1-9]|-1[0-9])?|gzip(?:-[1-9])?|zle|lz4)$"
        },
        "dedup": {
          "type": "string",
          "enum": [
            "on",
            "off"
          ]
        },
        "encryption": {
          "type": "string",
          "pattern": "^(on|off|aes-128-[c,g]cm|aes-192-[c,g]cm|aes-256-[c,g]cm)$"
        },
        "fsType": {
          "type": "string"
        },
        "keyformat": {
          "type": "string",
          "enum": [
            "passphrase",
            "raw",
            "hex"
          ]
        },
        "keylocation": {
          "type": "string"
        },
        "ownerNodeID": {
          "type": "string",
          "minLength": 1
        },
        "poolName": {
          "type": "string",
          "minLength": 1
        },
        "quotaType": {
          "type": "string",
          "enum": [
            "quota",
            "refquota"
          ]
        },
        "recordsize": {
          "type": "string",
          "minLength": 1
        },
        "shared": {
          "type": "string",
          "enum": [
            "yes",
            "no"
          ]
        },
        "snapname": {
          "type": "string"
        },
        "thinProvision": {
          "type": "string",
          "enum": [
            "yes",
            "no"
          ]
        },
        "volblocksize": {
          "type": "string",
          "minLength": 1
        },
        "volumeType": {
          "type": "string",
          "enum": [
            "ZVOL",
            "DATASET"
          ]
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "state": {
          "type": "string",
          "enum": [
            "Pending",
            "Ready",
            "Failed"
          ]
        }
      },
      "additionalProperties": false
    }
  }
}
