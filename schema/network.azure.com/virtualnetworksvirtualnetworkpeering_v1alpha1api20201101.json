{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "owner",
        "remoteVirtualNetwork"
      ],
      "properties": {
        "allowForwardedTraffic": {
          "type": "boolean"
        },
        "allowGatewayTransit": {
          "type": "boolean"
        },
        "allowVirtualNetworkAccess": {
          "type": "boolean"
        },
        "azureName": {
          "type": "string"
        },
        "location": {
          "type": "string"
        },
        "owner": {
          "type": "object",
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "peeringState": {
          "type": "string",
          "enum": [
            "Connected",
            "Disconnected",
            "Initiated"
          ]
        },
        "remoteAddressSpace": {
          "type": "object",
          "required": [
            "addressPrefixes"
          ],
          "properties": {
            "addressPrefixes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "remoteBgpCommunities": {
          "type": "object",
          "required": [
            "virtualNetworkCommunity"
          ],
          "properties": {
            "virtualNetworkCommunity": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "remoteVirtualNetwork": {
          "type": "object",
          "required": [
            "reference"
          ],
          "properties": {
            "reference": {
              "type": "object",
              "properties": {
                "armId": {
                  "type": "string",
                  "pattern": "(?i)^/subscriptions/([^/]+)(/resourcegroups/([^/]+))?/providers/([^/]+)/([^/]+/[^/]+)(/([^/]+/[^/]+))*$"
                },
                "group": {
                  "type": "string"
                },
                "kind": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "useRemoteGateways": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "allowForwardedTraffic": {
          "type": "boolean"
        },
        "allowGatewayTransit": {
          "type": "boolean"
        },
        "allowVirtualNetworkAccess": {
          "type": "boolean"
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "reason",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string"
              },
              "observedGeneration": {
                "type": "integer",
                "format": "int64"
              },
              "reason": {
                "type": "string"
              },
              "severity": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "doNotVerifyRemoteGateways": {
          "type": "boolean"
        },
        "etag": {
          "type": "string"
        },
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "peeringState": {
          "type": "string"
        },
        "provisioningState": {
          "type": "string"
        },
        "remoteAddressSpace": {
          "type": "object",
          "properties": {
            "addressPrefixes": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "remoteBgpCommunities": {
          "type": "object",
          "properties": {
            "regionalCommunity": {
              "type": "string"
            },
            "virtualNetworkCommunity": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "remoteVirtualNetwork": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "resourceGuid": {
          "type": "string"
        },
        "type": {
          "type": "string"
        },
        "useRemoteGateways": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}
