{
  "type": "object",
  "required": [
    "spec"
  ],
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "addonName",
        "agentSpec"
      ],
      "properties": {
        "addonName": {
          "type": "string"
        },
        "agentSpec": {
          "type": "object",
          "properties": {
            "deleteOption": {
              "type": "object",
              "properties": {
                "propagationPolicy": {
                  "type": "string",
                  "default": "Foreground",
                  "enum": [
                    "Foreground",
                    "Orphan",
                    "SelectivelyOrphan"
                  ]
                },
                "selectivelyOrphans": {
                  "type": "object",
                  "properties": {
                    "orphaningRules": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "required": [
                          "name",
                          "resource"
                        ],
                        "properties": {
                          "group": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "namespace": {
                            "type": "string"
                          },
                          "resource": {
                            "type": "string"
                          }
                        },
                        "additionalProperties": false
                      }
                    }
                  },
                  "additionalProperties": false
                },
                "ttlSecondsAfterFinished": {
                  "type": "integer",
                  "format": "int64"
                }
              },
              "additionalProperties": false
            },
            "executor": {
              "type": "object",
              "properties": {
                "subject": {
                  "type": "object",
                  "required": [
                    "type"
                  ],
                  "properties": {
                    "serviceAccount": {
                      "type": "object",
                      "required": [
                        "name",
                        "namespace"
                      ],
                      "properties": {
                        "name": {
                          "type": "string",
                          "maxLength": 253,
                          "minLength": 1,
                          "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*)$"
                        },
                        "namespace": {
                          "type": "string",
                          "maxLength": 253,
                          "minLength": 1,
                          "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*)$"
                        }
                      },
                      "additionalProperties": false
                    },
                    "type": {
                      "type": "string",
                      "enum": [
                        "ServiceAccount"
                      ]
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "manifestConfigs": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "resourceIdentifier"
                ],
                "properties": {
                  "conditionRules": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "condition",
                        "type"
                      ],
                      "properties": {
                        "celExpressions": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "condition": {
                          "type": "string"
                        },
                        "message": {
                          "type": "string"
                        },
                        "messageExpression": {
                          "type": "string"
                        },
                        "type": {
                          "type": "string",
                          "enum": [
                            "WellKnownConditions",
                            "CEL"
                          ]
                        }
                      },
                      "additionalProperties": false,
                      "x-kubernetes-validations": [
                        {
                          "rule": "self.type != 'CEL' || self.condition != \"\"",
                          "message": "Condition is required for CEL rules"
                        }
                      ]
                    },
                    "x-kubernetes-list-map-keys": [
                      "condition"
                    ],
                    "x-kubernetes-list-type": "map"
                  },
                  "feedbackRules": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "type"
                      ],
                      "properties": {
                        "jsonPaths": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "required": [
                              "name",
                              "path"
                            ],
                            "properties": {
                              "name": {
                                "type": "string"
                              },
                              "path": {
                                "type": "string"
                              },
                              "version": {
                                "type": "string"
                              }
                            },
                            "additionalProperties": false
                          },
                          "x-kubernetes-list-map-keys": [
                            "name"
                          ],
                          "x-kubernetes-list-type": "map"
                        },
                        "type": {
                          "type": "string",
                          "enum": [
                            "WellKnownStatus",
                            "JSONPaths"
                          ]
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "resourceIdentifier": {
                    "type": "object",
                    "required": [
                      "name",
                      "resource"
                    ],
                    "properties": {
                      "group": {
                        "type": "string"
                      },
                      "name": {
                        "type": "string"
                      },
                      "namespace": {
                        "type": "string"
                      },
                      "resource": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  },
                  "updateStrategy": {
                    "type": "object",
                    "required": [
                      "type"
                    ],
                    "properties": {
                      "serverSideApply": {
                        "type": "object",
                        "properties": {
                          "fieldManager": {
                            "type": "string",
                            "default": "work-agent",
                            "pattern": "^work-agent"
                          },
                          "force": {
                            "type": "boolean"
                          },
                          "ignoreFields": {
                            "type": "array",
                            "items": {
                              "type": "object",
                              "required": [
                                "condition",
                                "jsonPaths"
                              ],
                              "properties": {
                                "condition": {
                                  "type": "string",
                                  "default": "OnSpokePresent",
                                  "enum": [
                                    "OnSpokePresent",
                                    "OnSpokeChange"
                                  ]
                                },
                                "jsonPaths": {
                                  "type": "array",
                                  "minItems": 1,
                                  "items": {
                                    "type": "string"
                                  }
                                }
                              },
                              "additionalProperties": false
                            },
                            "x-kubernetes-list-map-keys": [
                              "condition"
                            ],
                            "x-kubernetes-list-type": "map"
                          }
                        },
                        "additionalProperties": false
                      },
                      "type": {
                        "type": "string",
                        "default": "Update",
                        "enum": [
                          "Update",
                          "CreateOnly",
                          "ServerSideApply",
                          "ReadOnly"
                        ]
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false
              }
            },
            "workload": {
              "type": "object",
              "properties": {
                "manifests": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "x-kubernetes-preserve-unknown-fields": true,
                    "x-kubernetes-embedded-resource": true
                  }
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "registration": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "type"
            ],
            "properties": {
              "customSigner": {
                "type": "object",
                "required": [
                  "signerName",
                  "signingCA"
                ],
                "properties": {
                  "signerName": {
                    "type": "string",
                    "maxLength": 571,
                    "minLength": 5,
                    "pattern": "^([a-z0-9][a-z0-9-]*[a-z0-9]\\.)+[a-z]+\\/[a-z0-9-\\.]+$"
                  },
                  "signingCA": {
                    "type": "object",
                    "required": [
                      "name"
                    ],
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "namespace": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  },
                  "subject": {
                    "type": "object",
                    "properties": {
                      "groups": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "organizationUnit": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "user": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false
              },
              "kubeClient": {
                "type": "object",
                "properties": {
                  "hubPermissions": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "type"
                      ],
                      "properties": {
                        "currentCluster": {
                          "type": "object",
                          "required": [
                            "clusterRoleName"
                          ],
                          "properties": {
                            "clusterRoleName": {
                              "type": "string"
                            }
                          },
                          "additionalProperties": false
                        },
                        "singleNamespace": {
                          "type": "object",
                          "required": [
                            "namespace",
                            "roleRef"
                          ],
                          "properties": {
                            "namespace": {
                              "type": "string"
                            },
                            "roleRef": {
                              "type": "object",
                              "required": [
                                "apiGroup",
                                "kind",
                                "name"
                              ],
                              "properties": {
                                "apiGroup": {
                                  "type": "string"
                                },
                                "kind": {
                                  "type": "string"
                                },
                                "name": {
                                  "type": "string"
                                }
                              },
                              "additionalProperties": false,
                              "x-kubernetes-map-type": "atomic"
                            }
                          },
                          "additionalProperties": false
                        },
                        "type": {
                          "type": "string",
                          "enum": [
                            "CurrentCluster",
                            "SingleNamespace"
                          ]
                        }
                      },
                      "additionalProperties": false
                    }
                  }
                },
                "additionalProperties": false
              },
              "type": {
                "type": "string",
                "enum": [
                  "KubeClient",
                  "CustomSigner"
                ]
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    }
  }
}
