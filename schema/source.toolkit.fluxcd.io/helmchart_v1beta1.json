{
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "additionalProperties": false,
      "properties": {
        "accessFrom": {
          "additionalProperties": false,
          "properties": {
            "namespaceSelectors": {
              "items": {
                "additionalProperties": false,
                "properties": {
                  "matchLabels": {
                    "additionalProperties": {
                      "type": "string"
                    },
                    "type": "object"
                  }
                },
                "type": "object"
              },
              "type": "array"
            }
          },
          "required": [
            "namespaceSelectors"
          ],
          "type": "object"
        },
        "chart": {
          "type": "string"
        },
        "interval": {
          "type": "string"
        },
        "reconcileStrategy": {
          "default": "ChartVersion",
          "enum": [
            "ChartVersion",
            "Revision"
          ],
          "type": "string"
        },
        "sourceRef": {
          "additionalProperties": false,
          "properties": {
            "apiVersion": {
              "type": "string"
            },
            "kind": {
              "enum": [
                "HelmRepository",
                "GitRepository",
                "Bucket"
              ],
              "type": "string"
            },
            "name": {
              "type": "string"
            }
          },
          "required": [
            "kind",
            "name"
          ],
          "type": "object"
        },
        "suspend": {
          "type": "boolean"
        },
        "valuesFile": {
          "type": "string"
        },
        "valuesFiles": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "version": {
          "default": "*",
          "type": "string"
        }
      },
      "required": [
        "chart",
        "interval",
        "sourceRef"
      ],
      "type": "object"
    },
    "status": {
      "additionalProperties": false,
      "default": {
        "observedGeneration": -1
      },
      "properties": {
        "artifact": {
          "additionalProperties": false,
          "properties": {
            "checksum": {
              "type": "string"
            },
            "lastUpdateTime": {
              "format": "date-time",
              "type": "string"
            },
            "path": {
              "type": "string"
            },
            "revision": {
              "type": "string"
            },
            "url": {
              "type": "string"
            }
          },
          "required": [
            "path",
            "url"
          ],
          "type": "object"
        },
        "conditions": {
          "items": {
            "additionalProperties": false,
            "properties": {
              "lastTransitionTime": {
                "format": "date-time",
                "type": "string"
              },
              "message": {
                "maxLength": 32768,
                "type": "string"
              },
              "observedGeneration": {
                "format": "int64",
                "minimum": 0,
                "type": "integer"
              },
              "reason": {
                "maxLength": 1024,
                "minLength": 1,
                "pattern": "^[A-Za-z]([A-Za-z0-9_,:]*[A-Za-z0-9_])?$",
                "type": "string"
              },
              "status": {
                "enum": [
                  "True",
                  "False",
                  "Unknown"
                ],
                "type": "string"
              },
              "type": {
                "maxLength": 316,
                "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*/)?(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])$",
                "type": "string"
              }
            },
            "required": [
              "lastTransitionTime",
              "message",
              "reason",
              "status",
              "type"
            ],
            "type": "object"
          },
          "type": "array"
        },
        "lastHandledReconcileAt": {
          "type": "string"
        },
        "observedGeneration": {
          "format": "int64",
          "type": "integer"
        },
        "url": {
          "type": "string"
        }
      },
      "type": "object"
    }
  },
  "type": "object"
}
