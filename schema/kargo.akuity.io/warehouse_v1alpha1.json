{
  "type": "object",
  "required": [
    "spec"
  ],
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "interval",
        "subscriptions"
      ],
      "properties": {
        "freightCreationPolicy": {
          "type": "string",
          "default": "Automatic",
          "enum": [
            "Automatic",
            "Manual"
          ]
        },
        "interval": {
          "type": "string",
          "default": "5m0s",
          "pattern": "^([0-9]+(\\.[0-9]+)?(s|m|h))+$"
        },
        "shard": {
          "type": "string"
        },
        "subscriptions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "properties": {
              "chart": {
                "type": "object",
                "required": [
                  "repoURL"
                ],
                "properties": {
                  "discoveryLimit": {
                    "type": "integer",
                    "format": "int32",
                    "default": 20,
                    "maximum": 100,
                    "minimum": 1
                  },
                  "name": {
                    "type": "string"
                  },
                  "repoURL": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^(((https?)|(oci))://)([\\w\\d\\.\\-]+)(:[\\d]+)?(/.*)*$"
                  },
                  "semverConstraint": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              },
              "git": {
                "type": "object",
                "required": [
                  "repoURL",
                  "strictSemvers"
                ],
                "properties": {
                  "allowTags": {
                    "type": "string"
                  },
                  "branch": {
                    "type": "string",
                    "maxLength": 255,
                    "minLength": 1,
                    "pattern": "^[a-zA-Z0-9]([a-zA-Z0-9._\\/-]*[a-zA-Z0-9_-])?$"
                  },
                  "commitSelectionStrategy": {
                    "type": "string",
                    "default": "NewestFromBranch",
                    "enum": [
                      "Lexical",
                      "NewestFromBranch",
                      "NewestTag",
                      "SemVer"
                    ]
                  },
                  "discoveryLimit": {
                    "type": "integer",
                    "format": "int32",
                    "default": 20,
                    "maximum": 100,
                    "minimum": 1
                  },
                  "excludePaths": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "expressionFilter": {
                    "type": "string"
                  },
                  "ignoreTags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "includePaths": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "insecureSkipTLSVerify": {
                    "type": "boolean"
                  },
                  "repoURL": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "(?:^(ssh|https?)://(?:([\\w-]+)(:(.+))?@)?([\\w-]+(?:\\.[\\w-]+)*)(?::(\\d{1,5}))?(/.*)$)|(?:^([\\w-]+)@([\\w+]+(?:\\.[\\w-]+)*):(/?.*))"
                  },
                  "semverConstraint": {
                    "type": "string"
                  },
                  "strictSemvers": {
                    "type": "boolean",
                    "default": true
                  }
                },
                "additionalProperties": false
              },
              "image": {
                "type": "object",
                "required": [
                  "repoURL",
                  "strictSemvers"
                ],
                "properties": {
                  "allowTags": {
                    "type": "string"
                  },
                  "constraint": {
                    "type": "string"
                  },
                  "discoveryLimit": {
                    "type": "integer",
                    "format": "int32",
                    "default": 20,
                    "maximum": 100,
                    "minimum": 1
                  },
                  "ignoreTags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "imageSelectionStrategy": {
                    "type": "string",
                    "default": "SemVer",
                    "enum": [
                      "Digest",
                      "Lexical",
                      "NewestBuild",
                      "SemVer"
                    ]
                  },
                  "insecureSkipTLSVerify": {
                    "type": "boolean"
                  },
                  "platform": {
                    "type": "string"
                  },
                  "repoURL": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^(\\w+([\\.-]\\w+)*(:[\\d]+)?/)?(\\w+([\\.-]\\w+)*)(/\\w+([\\.-]\\w+)*)*$"
                  },
                  "semverConstraint": {
                    "type": "string"
                  },
                  "strictSemvers": {
                    "type": "boolean",
                    "default": true
                  }
                },
                "additionalProperties": false,
                "x-kubernetes-validations": [
                  {
                    "rule": "!(has(self.semverConstraint) \u0026\u0026 has(self.constraint))",
                    "message": "semverConstraint and constraint fields are mutually exclusive"
                  },
                  {
                    "rule": "!(self.imageSelectionStrategy == 'Digest') || has(self.constraint) || has(self.semverConstraint)",
                    "message": "If imageSelectionStrategy is Digest, either constraint or semverConstraint must be set"
                  }
                ]
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "message",
              "reason",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 32768
              },
              "observedGeneration": {
                "type": "integer",
                "format": "int64",
                "minimum": 0
              },
              "reason": {
                "type": "string",
                "maxLength": 1024,
                "minLength": 1,
                "pattern": "^[A-Za-z]([A-Za-z0-9_,:]*[A-Za-z0-9_])?$"
              },
              "status": {
                "type": "string",
                "enum": [
                  "True",
                  "False",
                  "Unknown"
                ]
              },
              "type": {
                "type": "string",
                "maxLength": 316,
                "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*/)?(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])$"
              }
            },
            "additionalProperties": false
          },
          "x-kubernetes-list-map-keys": [
            "type"
          ],
          "x-kubernetes-list-type": "map"
        },
        "discoveredArtifacts": {
          "type": "object",
          "properties": {
            "charts": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "repoURL"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "repoURL": {
                    "type": "string",
                    "minLength": 1
                  },
                  "semverConstraint": {
                    "type": "string"
                  },
                  "versions": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "additionalProperties": false
              }
            },
            "discoveredAt": {
              "type": "string",
              "format": "date-time"
            },
            "git": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "repoURL"
                ],
                "properties": {
                  "commits": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "author": {
                          "type": "string"
                        },
                        "branch": {
                          "type": "string"
                        },
                        "committer": {
                          "type": "string"
                        },
                        "creatorDate": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "id": {
                          "type": "string",
                          "minLength": 1
                        },
                        "subject": {
                          "type": "string"
                        },
                        "tag": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "repoURL": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "(?:^(ssh|https?)://(?:([\\w-]+)(:(.+))?@)?([\\w-]+(?:\\.[\\w-]+)*)(?::(\\d{1,5}))?(/.*)$)|(?:^([\\w-]+)@([\\w+]+(?:\\.[\\w-]+)*):(/?.*))"
                  }
                },
                "additionalProperties": false
              }
            },
            "images": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "repoURL"
                ],
                "properties": {
                  "platform": {
                    "type": "string"
                  },
                  "references": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": [
                        "digest",
                        "tag"
                      ],
                      "properties": {
                        "annotations": {
                          "type": "object",
                          "additionalProperties": {
                            "type": "string"
                          }
                        },
                        "createdAt": {
                          "type": "string",
                          "format": "date-time"
                        },
                        "digest": {
                          "type": "string",
                          "minLength": 1,
                          "pattern": "^[a-z0-9]+:[a-f0-9]+$"
                        },
                        "tag": {
                          "type": "string",
                          "maxLength": 128,
                          "minLength": 1,
                          "pattern": "^[\\w.\\-\\_]+$"
                        }
                      },
                      "additionalProperties": false
                    }
                  },
                  "repoURL": {
                    "type": "string",
                    "minLength": 1
                  }
                },
                "additionalProperties": false
              }
            }
          },
          "additionalProperties": false
        },
        "lastFreightID": {
          "type": "string"
        },
        "lastHandledRefresh": {
          "type": "string"
        },
        "observedGeneration": {
          "type": "integer",
          "format": "int64"
        }
      },
      "additionalProperties": false
    }
  }
}
