{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "partitions",
        "project",
        "replication",
        "serviceName"
      ],
      "properties": {
        "authSecretRef": {
          "type": "object",
          "required": [
            "key",
            "name"
          ],
          "properties": {
            "key": {
              "type": "string",
              "minLength": 1
            },
            "name": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        },
        "config": {
          "type": "object",
          "properties": {
            "cleanup_policy": {
              "type": "string"
            },
            "compression_type": {
              "type": "string"
            },
            "delete_retention_ms": {
              "type": "integer",
              "format": "int64"
            },
            "file_delete_delay_ms": {
              "type": "integer",
              "format": "int64"
            },
            "flush_messages": {
              "type": "integer",
              "format": "int64"
            },
            "flush_ms": {
              "type": "integer",
              "format": "int64"
            },
            "index_interval_bytes": {
              "type": "integer",
              "format": "int64"
            },
            "local_retention_bytes": {
              "type": "integer",
              "format": "int64"
            },
            "local_retention_ms": {
              "type": "integer",
              "format": "int64"
            },
            "max_compaction_lag_ms": {
              "type": "integer",
              "format": "int64"
            },
            "max_message_bytes": {
              "type": "integer",
              "format": "int64"
            },
            "message_downconversion_enable": {
              "type": "boolean"
            },
            "message_format_version": {
              "type": "string"
            },
            "message_timestamp_difference_max_ms": {
              "type": "integer",
              "format": "int64"
            },
            "message_timestamp_type": {
              "type": "string"
            },
            "min_cleanable_dirty_ratio": {
              "type": "number"
            },
            "min_compaction_lag_ms": {
              "type": "integer",
              "format": "int64"
            },
            "min_insync_replicas": {
              "type": "integer",
              "format": "int64"
            },
            "preallocate": {
              "type": "boolean"
            },
            "remote_storage_enable": {
              "type": "boolean"
            },
            "retention_bytes": {
              "type": "integer",
              "format": "int64"
            },
            "retention_ms": {
              "type": "integer",
              "format": "int64"
            },
            "segment_bytes": {
              "type": "integer",
              "format": "int64"
            },
            "segment_index_bytes": {
              "type": "integer",
              "format": "int64"
            },
            "segment_jitter_ms": {
              "type": "integer",
              "format": "int64"
            },
            "segment_ms": {
              "type": "integer",
              "format": "int64"
            }
          },
          "additionalProperties": false
        },
        "partitions": {
          "type": "integer",
          "maximum": 1000000,
          "minimum": 1
        },
        "project": {
          "type": "string",
          "maxLength": 63,
          "pattern": "^[a-zA-Z0-9_-]+$",
          "x-kubernetes-validations": [
            {
              "rule": "self == oldSelf",
              "message": "Value is immutable"
            }
          ]
        },
        "replication": {
          "type": "integer",
          "minimum": 2
        },
        "serviceName": {
          "type": "string",
          "maxLength": 63,
          "pattern": "^[a-z][-a-z0-9]+$",
          "x-kubernetes-validations": [
            {
              "rule": "self == oldSelf",
              "message": "Value is immutable"
            }
          ]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "key"
            ],
            "properties": {
              "key": {
                "type": "string",
                "maxLength": 64,
                "minLength": 1,
                "pattern": "^[a-zA-Z0-9_-]+$"
              },
              "value": {
                "type": "string",
                "maxLength": 256,
                "pattern": "^[a-zA-Z0-9_-]+$"
              }
            },
            "additionalProperties": false
          }
        },
        "termination_protection": {
          "type": "boolean"
        },
        "topicName": {
          "type": "string",
          "maxLength": 249,
          "minLength": 1,
          "x-kubernetes-validations": [
            {
              "rule": "self == oldSelf",
              "message": "Value is immutable"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "required": [
        "conditions",
        "state"
      ],
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "message",
              "reason",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 32768
              },
              "observedGeneration": {
                "type": "integer",
                "format": "int64",
                "minimum": 0
              },
              "reason": {
                "type": "string",
                "maxLength": 1024,
                "minLength": 1,
                "pattern": "^[A-Za-z]([A-Za-z0-9_,:]*[A-Za-z0-9_])?$"
              },
              "status": {
                "type": "string",
                "enum": [
                  "True",
                  "False",
                  "Unknown"
                ]
              },
              "type": {
                "type": "string",
                "maxLength": 316,
                "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*/)?(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])$"
              }
            },
            "additionalProperties": false
          }
        },
        "state": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
