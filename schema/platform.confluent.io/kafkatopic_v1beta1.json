{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "properties": {
        "configs": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "x-kubernetes-map-type": "granular"
        },
        "kafkaClusterRef": {
          "type": "object",
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string"
            },
            "namespace": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "kafkaRest": {
          "type": "object",
          "properties": {
            "authentication": {
              "type": "object",
              "required": [
                "type"
              ],
              "properties": {
                "basic": {
                  "type": "object",
                  "properties": {
                    "debug": {
                      "type": "boolean"
                    },
                    "directoryPathInContainer": {
                      "type": "string",
                      "minLength": 1
                    },
                    "ignoreRoles": {
                      "type": "boolean"
                    },
                    "restrictedRoles": {
                      "type": "array",
                      "minItems": 1,
                      "items": {
                        "type": "string"
                      }
                    },
                    "roles": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "secretRef": {
                      "type": "string",
                      "maxLength": 30,
                      "minLength": 1,
                      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                    }
                  },
                  "additionalProperties": false
                },
                "bearer": {
                  "type": "object",
                  "properties": {
                    "directoryPathInContainer": {
                      "type": "string",
                      "minLength": 1
                    },
                    "secretRef": {
                      "type": "string",
                      "maxLength": 30,
                      "minLength": 1,
                      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                    }
                  },
                  "additionalProperties": false
                },
                "oauth": {
                  "type": "object",
                  "required": [
                    "configuration"
                  ],
                  "properties": {
                    "configuration": {
                      "type": "object",
                      "properties": {
                        "audience": {
                          "type": "string",
                          "minLength": 1
                        },
                        "clientAssertion": {
                          "type": "object",
                          "properties": {
                            "clientId": {
                              "type": "string",
                              "minLength": 1
                            },
                            "jwtTokenFile": {
                              "type": "object",
                              "properties": {
                                "directoryPathInContainer": {
                                  "type": "string",
                                  "minLength": 1
                                },
                                "secretRef": {
                                  "type": "string",
                                  "maxLength": 30,
                                  "minLength": 1,
                                  "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                                }
                              },
                              "additionalProperties": false
                            },
                            "localClientAssertion": {
                              "type": "object",
                              "properties": {
                                "audience": {
                                  "type": "string",
                                  "minLength": 1
                                },
                                "includeJtiClaim": {
                                  "type": "boolean"
                                },
                                "includeNbfClaim": {
                                  "type": "boolean"
                                },
                                "issuer": {
                                  "type": "string",
                                  "minLength": 1
                                },
                                "privateKeyFile": {
                                  "type": "object",
                                  "properties": {
                                    "directoryPathInContainer": {
                                      "type": "string",
                                      "minLength": 1
                                    },
                                    "encryptedPrivateKey": {
                                      "type": "boolean"
                                    },
                                    "includeAssertionTemplate": {
                                      "type": "boolean"
                                    },
                                    "secretRef": {
                                      "type": "string",
                                      "maxLength": 30,
                                      "minLength": 1,
                                      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                                    }
                                  },
                                  "additionalProperties": false
                                },
                                "subject": {
                                  "type": "string",
                                  "minLength": 1
                                },
                                "tokenLifetime": {
                                  "type": "integer",
                                  "format": "int32"
                                }
                              },
                              "additionalProperties": false
                            }
                          },
                          "additionalProperties": false
                        },
                        "expectedIssuer": {
                          "type": "string",
                          "minLength": 1
                        },
                        "groupsClaimName": {
                          "type": "string",
                          "minLength": 1
                        },
                        "jwksEndpointUri": {
                          "type": "string",
                          "minLength": 1
                        },
                        "loginConnectTimeoutMs": {
                          "type": "integer",
                          "format": "int32"
                        },
                        "loginReadTimeoutMs": {
                          "type": "integer",
                          "format": "int32"
                        },
                        "loginRetryBackoffMaxMs": {
                          "type": "integer",
                          "format": "int32"
                        },
                        "loginRetryBackoffMs": {
                          "type": "integer",
                          "format": "int32"
                        },
                        "scope": {
                          "type": "string",
                          "minLength": 1
                        },
                        "subClaimName": {
                          "type": "string",
                          "minLength": 1
                        },
                        "tokenEndpointUri": {
                          "type": "string",
                          "minLength": 1
                        }
                      },
                      "additionalProperties": false
                    },
                    "directoryPathInContainer": {
                      "type": "string",
                      "minLength": 1
                    },
                    "secretRef": {
                      "type": "string",
                      "maxLength": 30,
                      "minLength": 1,
                      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                    }
                  },
                  "additionalProperties": false
                },
                "sslClientAuthentication": {
                  "type": "boolean"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "basic",
                    "bearer",
                    "mtls",
                    "oauth"
                  ]
                }
              },
              "additionalProperties": false
            },
            "endpoint": {
              "type": "string",
              "minLength": 1,
              "pattern": "^https?://.*"
            },
            "kafkaClusterID": {
              "type": "string",
              "minLength": 1
            },
            "tls": {
              "type": "object",
              "properties": {
                "directoryPathInContainer": {
                  "type": "string",
                  "minLength": 1
                },
                "jksPassword": {
                  "type": "object",
                  "required": [
                    "secretRef"
                  ],
                  "properties": {
                    "secretRef": {
                      "type": "string",
                      "maxLength": 30,
                      "minLength": 1,
                      "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                    }
                  },
                  "additionalProperties": false
                },
                "secretRef": {
                  "type": "string",
                  "maxLength": 63,
                  "minLength": 1,
                  "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "kafkaRestClassRef": {
          "type": "object",
          "required": [
            "name"
          ],
          "properties": {
            "name": {
              "type": "string",
              "minLength": 1
            },
            "namespace": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "name": {
          "type": "string",
          "maxLength": 255,
          "minLength": 1,
          "pattern": "^[a-zA-Z0-9\\._\\-]*$"
        },
        "partitionCount": {
          "type": "integer",
          "format": "int32"
        },
        "replicas": {
          "type": "integer",
          "format": "int32"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "appState": {
          "type": "string",
          "default": "Unknown",
          "enum": [
            "Unknown",
            "Created",
            "Failed",
            "Deleted"
          ]
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "lastProbeTime": {
                "type": "string",
                "format": "date-time"
              },
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "kafkaCluster": {
          "type": "string"
        },
        "kafkaClusterID": {
          "type": "string"
        },
        "kafkaRestEndpoint": {
          "type": "string"
        },
        "observedGeneration": {
          "type": "integer",
          "format": "int64"
        },
        "partitionCount": {
          "type": "integer",
          "format": "int32"
        },
        "replicas": {
          "type": "integer",
          "format": "int32"
        },
        "state": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
