{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "properties": {
        "fipsMode": {
          "type": "string",
          "enum": [
            "FIPS",
            "Disabled"
          ]
        },
        "imageFamily": {
          "type": "string",
          "default": "Ubuntu",
          "enum": [
            "Ubuntu",
            "Ubuntu2204",
            "Ubuntu2404",
            "AzureLinux"
          ]
        },
        "kubelet": {
          "type": "object",
          "properties": {
            "allowedUnsafeSysctls": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "containerLogMaxFiles": {
              "type": "integer",
              "format": "int32",
              "default": 5,
              "minimum": 2
            },
            "containerLogMaxSize": {
              "type": "string",
              "default": "50Mi",
              "pattern": "^\\d+(E|P|T|G|M|K|Ei|Pi|Ti|Gi|Mi|Ki)$"
            },
            "cpuCFSQuota": {
              "type": "boolean",
              "default": true
            },
            "cpuCFSQuotaPeriod": {
              "type": "string",
              "default": "100ms"
            },
            "cpuManagerPolicy": {
              "type": "string",
              "default": "none",
              "enum": [
                "none",
                "static"
              ]
            },
            "imageGCHighThresholdPercent": {
              "type": "integer",
              "format": "int32",
              "maximum": 100,
              "minimum": 0
            },
            "imageGCLowThresholdPercent": {
              "type": "integer",
              "format": "int32",
              "maximum": 100,
              "minimum": 0
            },
            "podPidsLimit": {
              "type": "integer",
              "format": "int64"
            },
            "topologyManagerPolicy": {
              "type": "string",
              "default": "none",
              "enum": [
                "restricted",
                "best-effort",
                "none",
                "single-numa-node"
              ]
            }
          },
          "additionalProperties": false,
          "x-kubernetes-validations": [
            {
              "rule": "has(self.imageGCHighThresholdPercent) \u0026\u0026 has(self.imageGCLowThresholdPercent) ?  self.imageGCHighThresholdPercent \u003e self.imageGCLowThresholdPercent  : true",
              "message": "imageGCHighThresholdPercent must be greater than imageGCLowThresholdPercent"
            }
          ]
        },
        "maxPods": {
          "type": "integer",
          "format": "int32",
          "maximum": 250,
          "minimum": 10
        },
        "osDiskSizeGB": {
          "type": "integer",
          "format": "int32",
          "default": 128,
          "maximum": 2048,
          "minimum": 30
        },
        "security": {
          "type": "object",
          "properties": {
            "encryptionAtHost": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        },
        "tags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "x-kubernetes-validations": [
            {
              "rule": "self.all(k, size(k) \u003c= 512)",
              "message": "tags keys must be less than 512 characters"
            },
            {
              "rule": "self.all(k, !k.matches('[\u003c\u003e%\u0026?]'))",
              "message": "tags keys must not contain '\u003c', '\u003e', '%', '\u0026', or '?'"
            },
            {
              "rule": "self.all(k, !k.contains('\\\\'))",
              "message": "tags keys must not contain '\\'"
            },
            {
              "rule": "self.all(k, size(self[k]) \u003c= 256)",
              "message": "tags values must be less than 256 characters"
            }
          ]
        },
        "vnetSubnetID": {
          "type": "string",
          "pattern": "(?i)^\\/subscriptions\\/[^\\/]+\\/resourceGroups\\/[a-zA-Z0-9_\\-().]{0,89}[a-zA-Z0-9_\\-()]\\/providers\\/Microsoft\\.Network\\/virtualNetworks\\/[^\\/]+\\/subnets\\/[^\\/]+$"
        }
      },
      "additionalProperties": false,
      "x-kubernetes-validations": [
        {
          "rule": "has(self.fipsMode) \u0026\u0026 self.fipsMode == 'FIPS' ? (has(self.imageFamily) \u0026\u0026 self.imageFamily != 'Ubuntu2204' \u0026\u0026 self.imageFamily != 'Ubuntu2404') : true",
          "message": "FIPS is not yet supported for Ubuntu2204 or Ubuntu2404"
        }
      ]
    },
    "status": {
      "type": "object",
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "message",
              "reason",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 32768
              },
              "observedGeneration": {
                "type": "integer",
                "format": "int64",
                "minimum": 0
              },
              "reason": {
                "type": "string",
                "maxLength": 1024,
                "minLength": 1,
                "pattern": "^[A-Za-z]([A-Za-z0-9_,:]*[A-Za-z0-9_])?$"
              },
              "status": {
                "type": "string",
                "enum": [
                  "True",
                  "False",
                  "Unknown"
                ]
              },
              "type": {
                "type": "string",
                "maxLength": 316,
                "pattern": "^([a-z0-9]([-a-z0-9]*[a-z0-9])?(\\.[a-z0-9]([-a-z0-9]*[a-z0-9])?)*/)?(([A-Za-z0-9][-A-Za-z0-9_.]*)?[A-Za-z0-9])$"
              }
            },
            "additionalProperties": false
          }
        },
        "images": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "id",
              "requirements"
            ],
            "properties": {
              "id": {
                "type": "string"
              },
              "requirements": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "key",
                    "operator"
                  ],
                  "properties": {
                    "key": {
                      "type": "string"
                    },
                    "operator": {
                      "type": "string"
                    },
                    "values": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      },
                      "x-kubernetes-list-type": "atomic"
                    }
                  },
                  "additionalProperties": false
                }
              }
            },
            "additionalProperties": false
          }
        },
        "kubernetesVersion": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
