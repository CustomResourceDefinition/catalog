{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "bucket",
        "clusterName",
        "object",
        "region",
        "serviceInstanceID"
      ],
      "properties": {
        "bucket": {
          "type": "string"
        },
        "clusterName": {
          "type": "string",
          "minLength": 1
        },
        "deletePolicy": {
          "type": "string",
          "default": "delete",
          "enum": [
            "delete",
            "retain"
          ]
        },
        "object": {
          "type": "string"
        },
        "region": {
          "type": "string"
        },
        "serviceInstanceID": {
          "type": "string"
        },
        "storageType": {
          "type": "string",
          "default": "tier1",
          "enum": [
            "tier0",
            "tier1",
            "tier3"
          ]
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 10240,
                "minLength": 1
              },
              "reason": {
                "type": "string",
                "maxLength": 256,
                "minLength": 1
              },
              "severity": {
                "type": "string",
                "maxLength": 32
              },
              "status": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "maxLength": 256,
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        },
        "imageID": {
          "type": "string"
        },
        "imageState": {
          "type": "string"
        },
        "jobID": {
          "type": "string"
        },
        "ready": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
}
