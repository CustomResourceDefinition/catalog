{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "osDisk",
        "sshPublicKey",
        "vmSize"
      ],
      "properties": {
        "acceleratedNetworking": {
          "type": "boolean"
        },
        "additionalTags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "allocatePublicIP": {
          "type": "boolean"
        },
        "dataDisks": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "diskSizeGB",
              "nameSuffix"
            ],
            "properties": {
              "cachingType": {
                "type": "string",
                "enum": [
                  "None",
                  "ReadOnly",
                  "ReadWrite"
                ]
              },
              "diskSizeGB": {
                "type": "integer",
                "format": "int32"
              },
              "lun": {
                "type": "integer",
                "format": "int32"
              },
              "managedDisk": {
                "type": "object",
                "properties": {
                  "diskEncryptionSet": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  },
                  "storageAccountType": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              },
              "nameSuffix": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "enableIPForwarding": {
          "type": "boolean"
        },
        "failureDomain": {
          "type": "string"
        },
        "identity": {
          "type": "string",
          "default": "None",
          "enum": [
            "None",
            "SystemAssigned",
            "UserAssigned"
          ]
        },
        "image": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "marketplace": {
              "type": "object",
              "required": [
                "offer",
                "publisher",
                "sku",
                "version"
              ],
              "properties": {
                "offer": {
                  "type": "string",
                  "minLength": 1
                },
                "publisher": {
                  "type": "string",
                  "minLength": 1
                },
                "sku": {
                  "type": "string",
                  "minLength": 1
                },
                "thirdPartyImage": {
                  "type": "boolean",
                  "default": false
                },
                "version": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "additionalProperties": false
            },
            "sharedGallery": {
              "type": "object",
              "required": [
                "gallery",
                "name",
                "resourceGroup",
                "subscriptionID",
                "version"
              ],
              "properties": {
                "gallery": {
                  "type": "string",
                  "minLength": 1
                },
                "name": {
                  "type": "string",
                  "minLength": 1
                },
                "offer": {
                  "type": "string"
                },
                "publisher": {
                  "type": "string"
                },
                "resourceGroup": {
                  "type": "string",
                  "minLength": 1
                },
                "sku": {
                  "type": "string"
                },
                "subscriptionID": {
                  "type": "string",
                  "minLength": 1
                },
                "version": {
                  "type": "string",
                  "minLength": 1
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "osDisk": {
          "type": "object",
          "required": [
            "osType"
          ],
          "properties": {
            "cachingType": {
              "type": "string",
              "enum": [
                "None",
                "ReadOnly",
                "ReadWrite"
              ]
            },
            "diffDiskSettings": {
              "type": "object",
              "required": [
                "option"
              ],
              "properties": {
                "option": {
                  "type": "string",
                  "enum": [
                    "Local"
                  ]
                }
              },
              "additionalProperties": false
            },
            "diskSizeGB": {
              "type": "integer",
              "format": "int32"
            },
            "managedDisk": {
              "type": "object",
              "properties": {
                "diskEncryptionSet": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                },
                "storageAccountType": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "osType": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "providerID": {
          "type": "string"
        },
        "roleAssignmentName": {
          "type": "string"
        },
        "securityProfile": {
          "type": "object",
          "properties": {
            "encryptionAtHost": {
              "type": "boolean"
            }
          },
          "additionalProperties": false
        },
        "spotVMOptions": {
          "type": "object",
          "properties": {
            "maxPrice": {
              "pattern": "^(\\+|-)?(([0-9]+(\\.[0-9]*)?)|(\\.[0-9]+))(([KMGTPE]i)|[numkMGTPE]|([eE](\\+|-)?(([0-9]+(\\.[0-9]*)?)|(\\.[0-9]+))))?$",
              "anyOf": [
                {
                  "type": "integer"
                },
                {
                  "type": "string"
                }
              ],
              "x-kubernetes-int-or-string": true
            }
          },
          "additionalProperties": false
        },
        "sshPublicKey": {
          "type": "string"
        },
        "subnetName": {
          "type": "string"
        },
        "userAssignedIdentities": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "providerID"
            ],
            "properties": {
              "providerID": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "vmSize": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "addresses": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "address",
              "type"
            ],
            "properties": {
              "address": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              },
              "severity": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "failureMessage": {
          "type": "string"
        },
        "failureReason": {
          "type": "string"
        },
        "longRunningOperationStates": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "serviceName",
              "type"
            ],
            "properties": {
              "data": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "resourceGroup": {
                "type": "string"
              },
              "serviceName": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "ready": {
          "type": "boolean"
        },
        "vmState": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
