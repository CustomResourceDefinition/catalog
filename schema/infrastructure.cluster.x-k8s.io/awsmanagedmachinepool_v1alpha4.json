{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "properties": {
        "additionalTags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "amiType": {
          "type": "string",
          "default": "AL2_x86_64",
          "enum": [
            "AL2_x86_64",
            "AL2_x86_64_GPU",
            "AL2_ARM_64"
          ]
        },
        "amiVersion": {
          "type": "string",
          "minLength": 2
        },
        "availabilityZones": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "capacityType": {
          "type": "string",
          "default": "onDemand",
          "enum": [
            "onDemand",
            "spot"
          ]
        },
        "diskSize": {
          "type": "integer",
          "format": "int32"
        },
        "eksNodegroupName": {
          "type": "string"
        },
        "instanceType": {
          "type": "string"
        },
        "labels": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "providerIDList": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "remoteAccess": {
          "type": "object",
          "properties": {
            "public": {
              "type": "boolean"
            },
            "sourceSecurityGroups": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "sshKeyName": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "roleName": {
          "type": "string"
        },
        "scaling": {
          "type": "object",
          "properties": {
            "maxSize": {
              "type": "integer",
              "format": "int32"
            },
            "minSize": {
              "type": "integer",
              "format": "int32"
            }
          },
          "additionalProperties": false
        },
        "subnetIDs": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "taints": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "effect",
              "key",
              "value"
            ],
            "properties": {
              "effect": {
                "type": "string",
                "enum": [
                  "no-schedule",
                  "no-execute",
                  "prefer-no-schedule"
                ]
              },
              "key": {
                "type": "string"
              },
              "value": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "required": [
        "ready"
      ],
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              },
              "severity": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "failureMessage": {
          "type": "string"
        },
        "failureReason": {
          "type": "string"
        },
        "ready": {
          "type": "boolean",
          "default": false
        },
        "replicas": {
          "type": "integer",
          "format": "int32"
        }
      },
      "additionalProperties": false
    }
  }
}
