{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "location",
        "template"
      ],
      "properties": {
        "additionalTags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "identity": {
          "type": "string",
          "default": "None",
          "enum": [
            "None",
            "SystemAssigned",
            "UserAssigned"
          ]
        },
        "location": {
          "type": "string"
        },
        "providerID": {
          "type": "string"
        },
        "providerIDList": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "roleAssignmentName": {
          "type": "string"
        },
        "template": {
          "type": "object",
          "required": [
            "osDisk",
            "sshPublicKey",
            "vmSize"
          ],
          "properties": {
            "acceleratedNetworking": {
              "type": "boolean"
            },
            "dataDisks": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "diskSizeGB",
                  "nameSuffix"
                ],
                "properties": {
                  "cachingType": {
                    "type": "string"
                  },
                  "diskSizeGB": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "lun": {
                    "type": "integer",
                    "format": "int32"
                  },
                  "managedDisk": {
                    "type": "object",
                    "required": [
                      "storageAccountType"
                    ],
                    "properties": {
                      "diskEncryptionSet": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          }
                        },
                        "additionalProperties": false
                      },
                      "storageAccountType": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  },
                  "nameSuffix": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            },
            "image": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "marketplace": {
                  "type": "object",
                  "required": [
                    "offer",
                    "publisher",
                    "sku",
                    "version"
                  ],
                  "properties": {
                    "offer": {
                      "type": "string",
                      "minLength": 1
                    },
                    "publisher": {
                      "type": "string",
                      "minLength": 1
                    },
                    "sku": {
                      "type": "string",
                      "minLength": 1
                    },
                    "thirdPartyImage": {
                      "type": "boolean",
                      "default": false
                    },
                    "version": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "additionalProperties": false
                },
                "sharedGallery": {
                  "type": "object",
                  "required": [
                    "gallery",
                    "name",
                    "resourceGroup",
                    "subscriptionID",
                    "version"
                  ],
                  "properties": {
                    "gallery": {
                      "type": "string",
                      "minLength": 1
                    },
                    "name": {
                      "type": "string",
                      "minLength": 1
                    },
                    "resourceGroup": {
                      "type": "string",
                      "minLength": 1
                    },
                    "subscriptionID": {
                      "type": "string",
                      "minLength": 1
                    },
                    "version": {
                      "type": "string",
                      "minLength": 1
                    }
                  },
                  "additionalProperties": false
                }
              },
              "additionalProperties": false
            },
            "osDisk": {
              "type": "object",
              "required": [
                "diskSizeGB",
                "managedDisk",
                "osType"
              ],
              "properties": {
                "cachingType": {
                  "type": "string"
                },
                "diffDiskSettings": {
                  "type": "object",
                  "required": [
                    "option"
                  ],
                  "properties": {
                    "option": {
                      "type": "string",
                      "enum": [
                        "Local"
                      ]
                    }
                  },
                  "additionalProperties": false
                },
                "diskSizeGB": {
                  "type": "integer",
                  "format": "int32"
                },
                "managedDisk": {
                  "type": "object",
                  "required": [
                    "storageAccountType"
                  ],
                  "properties": {
                    "diskEncryptionSet": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        }
                      },
                      "additionalProperties": false
                    },
                    "storageAccountType": {
                      "type": "string"
                    }
                  },
                  "additionalProperties": false
                },
                "osType": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "securityProfile": {
              "type": "object",
              "properties": {
                "encryptionAtHost": {
                  "type": "boolean"
                }
              },
              "additionalProperties": false
            },
            "spotVMOptions": {
              "type": "object",
              "properties": {
                "maxPrice": {
                  "pattern": "^(\\+|-)?(([0-9]+(\\.[0-9]*)?)|(\\.[0-9]+))(([KMGTPE]i)|[numkMGTPE]|([eE](\\+|-)?(([0-9]+(\\.[0-9]*)?)|(\\.[0-9]+))))?$",
                  "anyOf": [
                    {
                      "type": "integer"
                    },
                    {
                      "type": "string"
                    }
                  ],
                  "x-kubernetes-int-or-string": true
                }
              },
              "additionalProperties": false
            },
            "sshPublicKey": {
              "type": "string"
            },
            "terminateNotificationTimeout": {
              "type": "integer"
            },
            "vmSize": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "userAssignedIdentities": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "providerID"
            ],
            "properties": {
              "providerID": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string"
              },
              "reason": {
                "type": "string"
              },
              "severity": {
                "type": "string"
              },
              "status": {
                "type": "string"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "failureMessage": {
          "type": "string"
        },
        "failureReason": {
          "type": "string"
        },
        "instances": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "latestModelApplied"
            ],
            "properties": {
              "instanceID": {
                "type": "string"
              },
              "instanceName": {
                "type": "string"
              },
              "latestModelApplied": {
                "type": "boolean"
              },
              "providerID": {
                "type": "string"
              },
              "provisioningState": {
                "type": "string"
              },
              "version": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "longRunningOperationState": {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "futureData": {
              "type": "string"
            },
            "name": {
              "type": "string"
            },
            "resourceGroup": {
              "type": "string"
            },
            "type": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "provisioningState": {
          "type": "string"
        },
        "ready": {
          "type": "boolean"
        },
        "replicas": {
          "type": "integer",
          "format": "int32"
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
