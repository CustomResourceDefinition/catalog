{
  "type": "object",
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "instanceType"
      ],
      "properties": {
        "additionalSecurityGroups": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "arn": {
                "type": "string"
              },
              "filters": {
                "type": "array",
                "items": {
                  "type": "object",
                  "required": [
                    "name",
                    "values"
                  ],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "values": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    }
                  },
                  "additionalProperties": false
                }
              },
              "id": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "additionalTags": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "ami": {
          "type": "object",
          "properties": {
            "eksLookupType": {
              "type": "string",
              "enum": [
                "AmazonLinux",
                "AmazonLinuxGPU"
              ]
            },
            "id": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "cloudInit": {
          "type": "object",
          "properties": {
            "insecureSkipSecretsManager": {
              "type": "boolean"
            },
            "secretCount": {
              "type": "integer",
              "format": "int32"
            },
            "secretPrefix": {
              "type": "string"
            },
            "secureSecretsBackend": {
              "type": "string",
              "enum": [
                "secrets-manager",
                "ssm-parameter-store"
              ]
            }
          },
          "additionalProperties": false
        },
        "failureDomain": {
          "type": "string"
        },
        "iamInstanceProfile": {
          "type": "string"
        },
        "ignition": {
          "type": "object",
          "properties": {
            "version": {
              "type": "string",
              "default": "2.3",
              "enum": [
                "2.3"
              ]
            }
          },
          "additionalProperties": false
        },
        "imageLookupBaseOS": {
          "type": "string"
        },
        "imageLookupFormat": {
          "type": "string"
        },
        "imageLookupOrg": {
          "type": "string"
        },
        "instanceID": {
          "type": "string"
        },
        "instanceType": {
          "type": "string",
          "minLength": 2
        },
        "networkInterfaces": {
          "type": "array",
          "maxItems": 2,
          "items": {
            "type": "string"
          }
        },
        "nonRootVolumes": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "size"
            ],
            "properties": {
              "deviceName": {
                "type": "string"
              },
              "encrypted": {
                "type": "boolean"
              },
              "encryptionKey": {
                "type": "string"
              },
              "iops": {
                "type": "integer",
                "format": "int64"
              },
              "size": {
                "type": "integer",
                "format": "int64",
                "minimum": 8
              },
              "throughput": {
                "type": "integer",
                "format": "int64"
              },
              "type": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "providerID": {
          "type": "string"
        },
        "publicIP": {
          "type": "boolean"
        },
        "rootVolume": {
          "type": "object",
          "required": [
            "size"
          ],
          "properties": {
            "deviceName": {
              "type": "string"
            },
            "encrypted": {
              "type": "boolean"
            },
            "encryptionKey": {
              "type": "string"
            },
            "iops": {
              "type": "integer",
              "format": "int64"
            },
            "size": {
              "type": "integer",
              "format": "int64",
              "minimum": 8
            },
            "throughput": {
              "type": "integer",
              "format": "int64"
            },
            "type": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "spotMarketOptions": {
          "type": "object",
          "properties": {
            "maxPrice": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "sshKeyName": {
          "type": "string"
        },
        "subnet": {
          "type": "object",
          "properties": {
            "arn": {
              "type": "string"
            },
            "filters": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "name",
                  "values"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "values": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                },
                "additionalProperties": false
              }
            },
            "id": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        "tenancy": {
          "type": "string",
          "enum": [
            "default",
            "dedicated",
            "host"
          ]
        },
        "uncompressedUserData": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "properties": {
        "addresses": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "address",
              "type"
            ],
            "properties": {
              "address": {
                "type": "string",
                "maxLength": 256,
                "minLength": 1
              },
              "type": {
                "type": "string",
                "enum": [
                  "Hostname",
                  "ExternalIP",
                  "InternalIP",
                  "ExternalDNS",
                  "InternalDNS"
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "conditions": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "lastTransitionTime",
              "status",
              "type"
            ],
            "properties": {
              "lastTransitionTime": {
                "type": "string",
                "format": "date-time"
              },
              "message": {
                "type": "string",
                "maxLength": 10240,
                "minLength": 1
              },
              "reason": {
                "type": "string",
                "maxLength": 256,
                "minLength": 1
              },
              "severity": {
                "type": "string",
                "maxLength": 32
              },
              "status": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "maxLength": 256,
                "minLength": 1
              }
            },
            "additionalProperties": false
          }
        },
        "failureMessage": {
          "type": "string"
        },
        "failureReason": {
          "type": "string"
        },
        "instanceState": {
          "type": "string"
        },
        "interruptible": {
          "type": "boolean"
        },
        "ready": {
          "type": "boolean"
        }
      },
      "additionalProperties": false
    }
  }
