{
  "type": "object",
  "required": [
    "spec"
  ],
  "properties": {
    "apiVersion": {
      "type": "string"
    },
    "kind": {
      "type": "string"
    },
    "metadata": {
      "type": "object"
    },
    "spec": {
      "type": "object",
      "required": [
        "googleServiceAccount"
      ],
      "properties": {
        "actuationMode": {
          "type": "string",
          "enum": [
            "Reconciling",
            "Paused"
          ]
        },
        "billingProject": {
          "type": "string"
        },
        "experiments": {
          "type": "object",
          "properties": {
            "controllerOverrides": {
              "type": "object",
              "additionalProperties": {
                "description": "ReconcilerType describes the type of reconciler (controller) being used",
                "type": "string"
              }
            }
          },
          "additionalProperties": false
        },
        "googleServiceAccount": {
          "type": "string"
        },
        "managerNamespace": {
          "type": "string",
          "x-kubernetes-validations": [
            {
              "rule": "self == oldSelf",
              "message": "ManagerNamespace field is immutable"
            }
          ]
        },
        "requestProjectPolicy": {
          "type": "string",
          "enum": [
            "SERVICE_ACCOUNT_PROJECT",
            "RESOURCE_PROJECT",
            "BILLING_PROJECT"
          ]
        },
        "stateIntoSpec": {
          "type": "string",
          "enum": [
            "Absent",
            "Merge"
          ]
        },
        "version": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "status": {
      "type": "object",
      "required": [
        "healthy",
        "observedGeneration"
      ],
      "properties": {
        "errors": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "healthy": {
          "type": "boolean"
        },
        "observedGeneration": {
          "type": "integer",
          "format": "int64",
          "default": 0
        },
        "phase": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  }
}
