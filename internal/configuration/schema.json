{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/CustomResourceDefinition/catalog/main/.schema.json",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "entries": {
        "description": "Specifies the names of the entries in a Helm registry to fetch",
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "kind": {
        "description": "Specifies which methodology should be used to generate schema with",
        "type": "string",
        "enum": ["helm", "helm-oci", "git", "http"]
      },
      "name": {
        "description": "A locally given name to refer to when logging",
        "type": "string",
        "minLength": 1
      },
      "namespace": {
        "description": "A namespace to use when generating templates",
        "type": "string",
        "minLength": 1
      },
      "description": {
        "description": "For rare commentary on a particular source",
        "type": "string",
        "minLength": 1
      },
      "apiGroups": {
        "description": "The API groups that should be present to indicate this is not its first run",
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "crds": {
        "description": "Specifies sources to download CRDs from",
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "object",
          "required": ["version", "baseUri", "paths"],
          "additionalProperties": false,
          "properties": {
            "version": {
              "type": "string",
              "$comment": "The pattern is intentionally open at the end to allow versions like 1.2.3-additional-stuff-appended",
              "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+"
            },
            "baseUri": {
              "type": "string",
              "pattern": "^https?://"
            },
            "paths": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      },
      "includeHead": {
        "description": "Specifies whether or not to include HEAD as a source of CRDs",
        "type": "boolean"
      },
      "genPaths": {
        "description": "Specifies paths to generate using go source from",
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "kustomizationPaths": {
        "description": "Specifies paths to build kustomizations from",
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "searchPaths": {
        "description": "Specifies paths to recursively find yaml files",
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "string",
          "minLength": 1
        }
      },
      "versionPrefix": {
        "description": "Specifies a suffix to tags that is not part of the semver - becomes part of a regex",
        "$comment": "Is also used to indicate that there are no versions by settings this property to 'unversioned'",
        "type": "string",
        "minLength": 1
      },
      "versionSuffix": {
        "description": "Specifies a suffix to tags that is not part of the semver - becomes part of a regex",
        "type": "string",
        "minLength": 1
      },
      "valuesFiles": {
        "description": "Specifies contents of value files present during generation of CRDs",
        "type": "array",
        "minItems": 1,
        "uniqueItems": true,
        "items": {
          "type": "object",
          "required": ["version", "valuesFile"],
          "additionalProperties": false,
          "properties": {
            "version": {
              "type": "string",
              "$comment": "The pattern is intentionally open at the end to allow versions like 1.2.3-additional-stuff-appended",
              "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+"
            },
            "valuesFile": {
              "type": "string"
            }
          }
        }
      },
      "repository": {
        "description": "Specifies where a source is",
        "type": "string"
      }
    },
    "if": {
      "properties": {
        "kind": { "const": "helm-oci" }
      }
    },
    "then": {
      "properties": {
        "repository": { "pattern": "^oci://" }
      }
    },
    "else": {
      "properties": {
        "repository": { "pattern": "^(https?)://" }
      }
    },
    "$comment": "The 'anyOf' handles which properties are required by which kind.",
    "anyOf": [
      {
        "properties": {
          "kind": {
            "const": "helm"
          }
        },
        "required": ["entries", "name", "repository"]
      },
      {
        "properties": {
          "kind": {
            "const": "helm-oci"
          }
        },
        "required": ["name", "repository"]
      },
      {
        "properties": {
          "kind": {
            "const": "http"
          }
        },
        "required": ["apiGroups", "crds", "name"]
      },
      {
        "properties": {
          "kind": {
            "const": "git"
          }
        },
        "required": ["name", "repository", "genPaths"]
      },
      {
        "properties": {
          "kind": {
            "const": "git"
          }
        },
        "required": ["name", "repository", "kustomizationPaths"]
      },
      {
        "properties": {
          "kind": {
            "const": "git"
          }
        },
        "required": ["name", "repository", "searchPaths"]
      }
    ]
  },
  "title": "Configuration",
  "type": "array"
}
